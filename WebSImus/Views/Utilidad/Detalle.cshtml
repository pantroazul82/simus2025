
@model SM.LibreriaComun.DTO.Servicios.UtilidadDataDetalleDTO

@{
    ViewBag.Title = "Detalle Utilidad";
    Layout = "~/Views/Shared/_LayoutEstandar.cshtml";
}

@section Scripts
{

    <script src="@Url.Content("~/Scripts/toDo/demo_edit_profile.js")"></script>
}
<ul class="breadcrumb">
    <li>@Html.ActionLink("Inicio", "Index", "Inicio")</li>
    <li>@Html.ActionLink("Utilidad", "Index", "Utilidad")</li>
</ul>
<div class="row">
    <div class="col-md-3 col-sm-4 col-xs-5">

        <form action="#" class="form-horizontal">
            <div class="panel panel-default">
                <div class="panel-body">
                    <h3><span class="fa-representante fa-2x"></span> Datos básicos</h3>
                    <p>@Html.DisplayFor(m => m.Titulo, new { @class = "panel-title" })</p>
                    <div class="text-center" id="user_image">
                        <img src="@Url.Content(ViewBag.ImageData)" class="img-thumbnail" />
                    </div>
                </div>
                <div class="panel-body form-group-separated">

                    <div class="form-group">
                        <label class="col-md-3 col-xs-5 control-label">Estado</label>
                        <div class="col-md-9 col-xs-7 line-height-30">
                            @Html.DisplayFor(m => m.Estado)
                        </div>
                    </div>

                    <

                </div>
            </div>
        </form>

    </div>
    <div class="col-md-9 col-sm-8 col-xs-7">


        <div class="panel panel-default form-horizontal ">
            <div class="panel-body">
                <h3><span class="fa fa-pencil"></span> Perfil</h3>

            </div>
            <div class="panel-body form-group-separated">
                <div class="form-group">
                    <label class="col-md-4 control-label">Titulo</label>
                    <div class="col-md-8 col-xs-7 col-xs-7 line-height-30">
                        @Html.DisplayFor(m => m.Titulo)
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4 control-label">Tipo Actor</label>
                    <div class="col-md-8 col-xs-7 col-xs-7 line-height-30">
                        @Html.DisplayFor(m => m.TipoActor)
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4 col-xs-5 control-label">Responsable</label>
                    <div class="col-md-8 col-xs-7 col-xs-7 line-height-30">
                        @Html.DisplayFor(m => m.NombreActor)
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4 col-xs-5 control-label">Tipo Utilidad</label>
                    <div class="col-md-8 col-xs-7 col-xs-7 col-xs-7 line-height-30">
                        @Html.DisplayFor(m => m.TipoUtilidad)
                    </div>
                </div>


                <div class="form-group">
                    <label class="col-md-4 col-xs-5 control-label">Clasificación</label>
                    <div class="col-md-8 col-xs-7 line-height-30">
                        @Html.DisplayFor(m => m.Clasificacion)
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4 col-xs-5 control-label">Telefono</label>
                    <div class="col-md-8 col-xs-7 line-height-30">
                        @Html.DisplayFor(m => m.Telefono)
                    </div>
                </div>


                <div class="form-group">
                    <label class="col-md-4 col-xs-5 control-label">Correo electrónico</label>
                    <div class="col-md-8 col-xs-7  line-height-30">
                        @Html.DisplayFor(m => m.Email)
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4 col-xs-5 control-label">Dirección</label>
                    <div class="col-md-8 col-xs-7  line-height-30">
                        @Html.DisplayFor(m => m.Direccion)
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4 col-xs-5 control-label">País</label>
                    <div class="col-md-8 col-xs-7  line-height-30">
                        @Html.DisplayFor(m => m.Pais)
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4 col-xs-5 control-label">Departamento/Municipio</label>
                    <div class="col-md-8 col-xs-7  line-height-30">
                        @Html.DisplayFor(m => m.Departamento) @Html.DisplayFor(m => m.Municipio)
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4 col-xs-5 control-label">Otra ciudad</label>
                    <div class="col-md-8 col-xs-7  line-height-30">
                        @Html.DisplayFor(m => m.OtraCiudad) @Html.DisplayFor(m => m.OtraCiudad)
                    </div>
                </div>

            </div>
        </div>

            

    </div>

</div>
