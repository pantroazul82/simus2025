@model WebSImus.Models.RestablecerModel
@{
    ViewBag.Title = "Cambiar contraseña";
    Layout = "~/Views/Shared/_LayoutEstandar.cshtml";
}

@using (Html.BeginForm("Restablecer", "CambioPassIntr", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal modern-profile-form", role = "form" }))
{
    <div class="form-header">
        <h2 class="form-title">
            <i class="fas fa-key"></i> Cambio de Contraseña
        </h2>
        <p class="form-subtitle">Al cambiar su contraseña será redirigido al inicio de sesión.</p>
    </div>

    <div class="form-body">
        @Html.ValidationSummary(false, "", new { @class = "alert alert-warning validation-summary" })

        @Html.HiddenFor(m => m.correo)

        <div class="form-row">
            <div class="form-group col-md-12">
                @Html.Label("Correo electrónico", htmlAttributes: new { @class = "form-label" })
                @Html.TextBoxFor(m => m.correo, new { @readonly = "readonly", @class = "form-control modern-input", type = "email" })
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-12">
                @Html.Label("Contraseña actual*", htmlAttributes: new { @class = "form-label" })
                @Html.PasswordFor(s => s.actualcontrasena, new { @class = "form-control modern-input", maxlength = "20" })
                @Html.ValidationMessageFor(model => model.actualcontrasena, "", new { @class = "validation-error" })
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-12">
                @Html.Label("Nueva contraseña*", htmlAttributes: new { @class = "form-label" })
                @Html.PasswordFor(s => s.contrasena, new { @class = "form-control modern-input", maxlength = "20" })
                @Html.ValidationMessageFor(model => model.contrasena, "", new { @class = "validation-error" })
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-12">
                @Html.Label("Confirmar nueva contraseña*", htmlAttributes: new { @class = "form-label" })
                @Html.PasswordFor(s => s.confcontrasena, new { @class = "form-control modern-input", maxlength = "20" })
                @Html.ValidationMessageFor(model => model.confcontrasena, "", new { @class = "validation-error" })
            </div>
        </div>
    </div>

    <div class="form-footer">
        <a href="@Url.Action("Index", "Inicio")" class="btn btn-secondary-cancel">
            <i class="fas fa-arrow-left"></i> Regresar
        </a>
        <button type="submit" class="btn btn-primary-save">
            <i class="fas fa-save"></i> Guardar
        </button>
    </div>
}

<style>
    .modern-profile-form {
        max-width: 600px;
        margin: 40px auto;
        padding: 30px;
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .form-header {
        margin-bottom: 30px;
        text-align: center;
        color: #4b3c8c;
    }

    .form-title {
        font-size: 28px;
        font-weight: 700;
        margin-bottom: 5px;
        color: #4b3c8c;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 10px;
    }

    .form-subtitle {
        font-size: 15px;
        color: #7f8c8d;
    }

    .form-row {
        display: flex;
        flex-direction: column;
        gap: 20px;
        margin-bottom: 20px;
    }

    .form-label {
        font-weight: 500;
        margin-bottom: 6px;
        color: #34495e;
    }

    .form-control.modern-input {
        font-size: 1.1rem;
        padding: 12px 15px;
        border: 1px solid #dcdde1;
        border-radius: 8px;
        background-color: #f9f9f9;
        transition: all 0.3s ease-in-out;
    }

        .form-control.modern-input:focus {
            border-color: #4b3c8c;
            background-color: #fff;
            box-shadow: 0 0 0 3px rgba(75, 60, 140, 0.15);
            outline: none;
        }

    .validation-error {
        color: #e74c3c;
        font-size: 13px;
        margin-top: 4px;
    }

    .validation-summary {
        background: #fff3cd;
        border: 1px solid #ffeeba;
        color: #856404;
        padding: 10px;
        border-radius: 8px;
        font-size: 14px;
        margin-bottom: 25px;
    }

    .form-footer {
        display: flex;
        justify-content: space-between;
        margin-top: 30px;
    }

    .btn-primary-save {
        background-color: #4b3c8c;
        color: white;
        padding: 12px 24px;
        border: none;
        border-radius: 8px;
        font-size: 16px;
        font-weight: 500;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .btn-primary-save:hover {
            background-color: #281e52;
        }

    .btn-secondary-cancel {
        background-color: #ecf0f1;
        color: #34495e;
        padding: 12px 24px;
        border-radius: 8px;
        font-size: 16px;
        font-weight: 500;
        text-decoration: none;
        border: 1px solid #d5dbdb;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

        .btn-secondary-cancel:hover {
            background-color: #dfe4ea;
        }
</style>


