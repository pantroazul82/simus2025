@model IEnumerable<SM.LibreriaComun.DTO.OcupacionDTO>
<div class="panel panel-default">
    <div class="form-group">
        <div class="row">
            @Html.Hidden("item-to-delete", "", new { @id = "item-to-delete" })

            @if (Model != null)
            {
                foreach (SM.LibreriaComun.DTO.OcupacionDTO item in Model)
                {
                    <div class="col-lg-4">
                        <div class="blog-carousel">
                            <div class="blog-carousel-header">
                                <div class="blog-carousel-meta">
                                    <span><i class="fa fa-check"></i> @(item.Atributo)</span>
                                    <a href="" class="fa-trash-a" data-toggle="modal" data-id="@item.Id" onclick="javascript: EliminarOcupacion('@item.Id');"></a>
                                </div><!-- end blog-carousel-meta -->
                            </div><!-- end blog-carousel-header -->
                            <br />
                        </div><!-- end blog-carousel -->
                    </div>

                }
            }
        </div>

    </div>
</div>


<div class="panel panel-default">
    <div class="row push-down-20">
        <h3><span class="fa-representante fa-2x"></span> Datos de Instrumentos</h3>
    </div>
    <div class="row">


        @if (Model != null)
        {
            foreach (SM.LibreriaComun.DTO.OcupacionDTO item in Model)
            {
                if (item.EsInstrumento == true)
                {
                    <div class="col-lg-12">


                        <div class="row push-down-20">
                            <div class="col-md-6">
                                <span><i class="fa fa-music"></i> Registre los instrumentos para @(item.Atributo)</span>
                                <br />
                                <div class="form-group">

                                    <div class="col-md-9">
                                        @Html.Editor("Instrumentos" + item.Id, new { htmlAttributes = new { @class = "form-control instrumento" } })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <div class="col-md-6">
                                        <a href="" class="btn btn-success glyphicon glyphicon-plus-sign" data-toggle="modal" data-target="#modalConfirmarFormacionaa" data-id="@item.Id" onclick="javascript: AgregarInstrumentos('@item.Id', '@item.OficioId');"> Agregar</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        }
    </div>


    <div id="modalConfirmarAccion" class="modal modal-vcenter fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body">
                    Esta a punto de eliminar una ocupación. <strong>Tenga en cuenta que esta acción no se puede revertir</strong>.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                    <button type="button" id="myDelete" class="btn btn-danger" data-dismiss="modal" onclick="EliminarOcupacion()">Eliminar</button>

                </div>
            </div>

        </div>
    </div>
</div>

<script type="text/javascript">

</script>