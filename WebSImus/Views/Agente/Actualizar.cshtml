    //Estudios y experiencia
    //Agregar Formación
    $('#mySubmit').click(function () {
        var varprueba = $("#Empresa").valid();
        var varmesInicio = $('#MesInicio').val();
        var varanoInicio = $('#AnoInicio').val();
        var varmesFin = $('#MesFin').val();
        var varanoFin = $('#AnoFin').val();


        if (varprueba == false) {
            alert("La institución es obligatoria");
            return;
        }


        if ($('#Titulo').valid() == false) {
            alert("El título es obligatorio");
            return;
        }

        if ($('#MesInicio').val() == "") {
            alert("El mes inicio es obligatorio");
            return;
        }

        if ($('#AnoInicio').val() == "") {
            alert("El año inicio es obligatorio");
            return;
        }

        if ($('#MesFin').val() == "") {
            alert("El mes fin es obligatorio");
            return;
        }

        if ($('#AnoFin').val() == "") {
            alert("El año fin es obligatorio");
            return;
        }

        var dateInicio = new Date(varanoInicio, varmesInicio, 01); //Year, Month, Date
        var datefin = new Date(varanoFin, varmesFin, 01);
        if (datefin < dateInicio) {
            alert("El periodo final debe ser mayor o igual al periodo inicial");
            return;
        }

        var url = '@Url.Action("AgregarFormacion", "Agente")';
        var varagenteId = '@Model.DatosBasicos.AgenteId';
        $.ajax({
            url: url,
            type: 'POST',
            data: {
                id: 0, empresa: $('#Empresa').val(), titulo: $('#Titulo').val(), mesinicio: $('#MesInicio').val(),
                anoinicio: $('#AnoInicio').val(), mesfin: $('#MesFin').val(), anofin: $('#AnoFin').val(),
                trabajoactual: 'false', descripcion: $('#Descripcion').val(), agenteId: varagenteId
            },
            success: function (data) {
                if (data) {
                    $(':input', '#myForm')
                      .not(':button, :submit, :reset, :hidden')
                      .val('')
                      .removeAttr('checked')
                      .removeAttr('selected');
                    actualizarFormacion(0);
                }
            },

        });
    });

    function actualizarFormacion(vaerliminar) {
        var varagenteId = '@Model.DatosBasicos.AgenteId';
        $('#Empresa').val("");
        $('#Titulo').val("");
        $('#Descripcion').val("");
        $("#MesInicio").val("").change();
        $("#AnoInicio").val("").change();
        $("#MesFin").val("").change();
        $("#AnoFin").val("").change();
        $.ajax({

            url: "/Agente/_TablaFormacion",
            type: "GET",
            data: { Id: varagenteId, Eliminar: vaerliminar }
        })
       .done(function (partialViewResult) {
           $("#formacionTabla").html(partialViewResult);
           $('#item-to-deletef').val(0);

           if (vaerliminar > 0) {
               $("#modalConfirmarFormacion").modal('hide');
               $('body').removeClass('modal-open');
               $('.modal-backdrop').remove();
           }

       });

    }

