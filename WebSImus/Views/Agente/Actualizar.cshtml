    function ActualizarListadoServicio(VarAgenteId, varEliminar) {

        $('#Servicio').val("");
        $.ajax({

            url: "/Agente/CargarServicio",
            type: "GET",
            data: { AgenteId: VarAgenteId, EliminarId: varEliminar }
        })
       .done(function (partialViewResult) {
           $("#TablaServicio").html(partialViewResult);

