    $('#mySubmitOcupac').click(function () {
        var varOcupacion = $("#Ocupacion").val();

        if (varOcupacion == '') {
            alert("Es obligatorio escribir una ocupación");
            return;
        }

        var url = '@Url.Action("AgregarOcupacion", "Agente")';
        var varAgenteId = '@Model.DatosBasicos.AgenteId';
            $.ajax({
                url: url,
                type: 'POST',
                data: {
                    atributo: $('#Ocupacion').val(), agenteId: varAgenteId
                },
