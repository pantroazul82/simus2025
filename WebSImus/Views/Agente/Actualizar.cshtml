@model WebSImus.Models.AgentePadreModel
@{
    ViewBag.Title = @ViewBag.Nombre;
    Layout = "~/Views/Shared/_LayoutEstandar.cshtml";
}

@using (Html.BeginForm("Actualizar", "Agente", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()
    <ul class="breadcrumb">
        <li>@Html.ActionLink("Inicio", "Index", "Inicio")</li>
        <li>@Html.ActionLink("Agente", "Index", "Agente")</li>
        <li>@Html.ActionLink("Certificado", "CertificadoPdf", "Certificacion", new { Id = Model.DatosBasicos.AgenteId, Modulo = "Agentes" }, null)</li>
    </ul>
    <!-- START DEFAULT WIZARD -->
    <div class="panel panel-colorful">
        <div class="row push-down-20">
            <div class="col-md-6">

                <div class="form-group">
                    @Html.ActionLink(" Certificado", "CertificadoPdf", "Certificacion", new { Id = Model.DatosBasicos.AgenteId, Modulo = "Agentes" }, new { @class = "btn btn-warning glyphicon glyphicon-link" })

                    @Html.ActionLink(" Histórico", "Index", "Certificacion", new { Id = Model.DatosBasicos.AgenteId, Modulo = "Agentes" }, new { @class = "btn btn-success glyphicon glyphicon-user" })
                </div>
            </div>
        </div>
        <div class="panel-body">
            <h3>@ViewBag.NuevoTitulo</h3>
            <blockquote class="blockquote-success">
                <p class="text-danger ">Los campos marcados con asterisco (*) son obligatorios</p>
            </blockquote>
            <div class="wizard" id="wizardEditarA">

                <ul>
                    <li>
                        <a href="#step-1">
                            <span class="stepNumber">1</span>
                            <span class="stepDesc">Registrarse <br /><small>Datos básicos</small></span>
                        </a>
                    </li>
                    <li>
                        <a href="#step-2">
                            <span class="stepNumber">2</span>
                            <span class="stepDesc">Perfil <br /><small>Estudios/Experiencias/Ocupación </small></span>
                        </a>
                    </li>
                    <li>
                        <a href="#step-3">
                            <span class="stepNumber">3</span>
                            <span class="stepDesc">Oferta<br /><small>Servicios/Productos</small></span>
                        </a>
                    </li>
                    <li>
                        <a href="#step-4">
                            <span class="stepNumber">4</span>
                            <span class="stepDesc">Redes<br /><small>Sociales</small></span>
                        </a>
                    </li>
                </ul>
                <div id="step-1">
                    @Html.Partial("_AgregarDatosBasicos", Model.DatosBasicos)
                </div>
                <div id="step-2">
                    <div class="row">
                        <div class="col-md-12">
                            @Html.Partial("_DatosPerfil", Model.DatosBasicos)
                        </div>
                    </div>
                </div>
                <div id="step-3">
                    <div class="row">
                        <div class="col-md-12">
                            @Html.Partial("_DatosServicios", Model.DatosBasicos)
                        </div>
                    </div>
                </div>
                <div id="step-4">
                    <div class="row">
                        <div class="col-md-12">
                      
                            @Html.Action("_DatosRedes", "RedSocial", new { Id = @Model.DatosBasicos.AgenteId, Tipo = "Agente" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END DEFAULT WIZARD -->

}
