    function actualizarExperiencia(vaerliminar) {
        var varagenteId = '@Model.DatosBasicos.AgenteId';

        $('#EmpresaExp').val("");
        $('#TituloExp').val("");
        $('#DescripcionExp').val("");
        $("#MesInicioExp").val("").change();
        $("#AnoInicioExp").val("").change();
        $("#MesFinExp").val("").change();
        $("#AnoFinExp").val("").change();

        $.ajax({

            url: "/Agente/_TablaExperiencia",
