@model WebSImus.Models.AgenteModel
@using MvcCheckBoxList.Model
<div class="panel panel-default">
    <div class="panel-heading">
        <h2><span class="fa-representante fa-2x"></span> Información Básica</h2>
    </div>
    <div class="row">
        <div class="col-md-4 push-up-20">

            <div class="" id="user_image">
                <img src="@Url.Content(ViewBag.ImageData)" class="img-thumbnail" />
                @Html.HiddenFor(model => model.imagen)
            </div>

        </div>
        <div class="col-md-8 push-up-20">
            @Html.HiddenFor(model => model.EstadoOldId)
            @Html.HiddenFor(model => model.CodigoPais)
            <div class="form-group">

                <label class="control-label"> * Reseña</label>
                <div class="col-md-12">
                    @Html.TextAreaFor(model => model.Descripcion, new { @class = "form-control text", @rows = "10", @cols = "50" })
                    @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="panel-body">

        <div class="row push-down-20">
            <h3><span class="fa-representante fa-2x"></span> Datos de Identificación</h3>
            @Html.HiddenFor(model => model.AgenteId)
        </div>
        <div class="row push-down-20">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="col-md-3 control-label">* Tipo documento</label>
                    <div class="col-md-9">
                        @Html.DropDownListFor(model => model.TipoDocumento, (SelectList)ViewBag.listTipoDocumento, "Seleccione el tipo documento", new { @class = "form-control select" })
                        @Html.ValidationMessageFor(model => model.TipoDocumento, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">* Número documento</label>
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.NumeroDocumento, new { @class = "form-control text", @maxlength = "20" })
                        @Html.ValidationMessageFor(model => model.NumeroDocumento, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">* Primer nombre</label>
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.PrimerNombre, new { @class = "form-control text", @maxlength = "50" })
                        @Html.ValidationMessageFor(model => model.PrimerNombre, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Segundo nombre</label>
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.SegundoNombre, new { @class = "form-control text", @maxlength = "50" })
                        @Html.ValidationMessageFor(model => model.SegundoNombre, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">* Primer apellido</label>
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.PrimerApellido, new { @class = "form-control text", @maxlength = "50" })
                        @Html.ValidationMessageFor(model => model.PrimerApellido, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Segundo apellido</label>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.SegundoApellido, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SegundoApellido, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>
            <div class="col-md-6">


                <div class="form-group">
                    <label class="col-md-3 control-label">Nombre artístico</label>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.NombreArtistico, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NombreArtistico, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">* Fecha de nacimiento</label>
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.FechaNacimiento, new { @class = "form-control datepicker", @Value = Model.FechaNacimiento.ToString("yyyy-MM-dd") })
                        @Html.ValidationMessageFor(model => model.FechaNacimiento, "", new { @class = "text-danger" })

                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label">Sexo</label>
                    <div class="col-md-4">
                        <label class="check">
                            @Html.RadioButtonFor(m => m.Sexo, "Femenino", Model.Sexo != null && Model.Sexo == "F" ? new { Checked = "checked" } : null)<span class="fa fa-femenino"></span> Femenino

                        </label>
                        @Html.ValidationMessageFor(model => model.Sexo, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-4">
                        <label class="check">
                            @Html.RadioButtonFor(m => m.Sexo, "Masculino", Model.Sexo != null && Model.Sexo == "M" ? new { Checked = "checked" } : null)<span class="fa fa-masculino"></span> Masculino
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Subir foto</label>

                    <div class="col-md-9">
                       
                        <input onclick="resizePanel()" id="imagenPerfil" name="imagenPerfil" type="file">
                        <p class="text-info"><i class="fa-question"></i>Archivo permitidos: .jpg y .png de tamaño máximo 1 Mb</p>
                    </div>

                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Estado</label>
                    <div class="col-md-9">
                        @Html.DropDownListFor(model => model.EstadoId, (SelectList)ViewBag.listEstado, "Seleccione un estado", new { @class = "styled-select" })
                        @Html.ValidationMessageFor(model => model.EstadoId, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="row push-down-20" id="panelMotivo">
                <p class="text-info"><i class="fa-ayuda"></i> Por favor, escriba el motivo del rechazo o incompleto.</p>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="col-md-4 control-label">* Motivo</label>
                            <div class="col-md-8 push-down-20">
                                @Html.TextAreaFor(model => model.Motivo, new { @class = "form-control text", @rows = "7", @cols = "50" })
                                @Html.ValidationMessageFor(model => model.Motivo, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row push-down-20">
            <h3><span class="fa-documentos fa-2x"></span> Datos de Ubicación</h3>
        </div>
        <div class="row push-down-20">
            <div class="col-md-6">


                <div class="form-group">
                    <label class="col-md-3 control-label">* Departamento</label>
                    <div class="col-md-9">
                        @Html.DropDownListFor(model => model.CodigoDepartamento, (SelectList)ViewBag.listDepartamentos, "Seleccione un departamento", new { @class = "styled-select" })
                        @Html.ValidationMessageFor(model => model.CodigoDepartamento, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">* Municipio</label>
                    <div class="col-md-9">
                        @Html.DropDownListFor(model => model.CodigoMunicipio, (SelectList)ViewBag.listMunicipio, "Seleccione un municipio", new { @class = "styled-select" })
                        @Html.ValidationMessageFor(model => model.CodigoMunicipio, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Área</label>
                    <div class="col-md-9">
                        @Html.DropDownListFor(model => model.Area, (SelectList)ViewBag.listArea, "Seleccione un área", new { @class = "styled-select" })
                        @Html.ValidationMessageFor(model => model.Area, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label"> Dirección</label>
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.Direccion, new { @class = "form-control text", @maxlength = "200" })
                        @Html.ValidationMessageFor(model => model.Direccion, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>
            <div class="col-md-6">

                <div class="form-group">
                    <label class="col-md-3 control-label"> Teléfono</label>
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.Telefono, new { @class = "form-control text", @maxlength = "50" })
                        @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">* Correo Electrónico</label>
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.CorreoElectronico, new { @class = "form-control text", @maxlength = "100" })
                        @Html.ValidationMessageFor(model => model.CorreoElectronico, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Link Portafolio</label>
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.linkPortafolio, new { @class = "form-control text", @maxlength = "200" })
                        @Html.ValidationMessageFor(model => model.linkPortafolio, "", new { @class = "text-danger" })
                    </div>
                </div>


            </div>
        </div>

    </div>
    <div class="panel-footer">
        <input type="submit" value="Guardar" name="Guardar" class="btn btn-primary pull-right" id="btnGuardar" />

    </div>
</div>

