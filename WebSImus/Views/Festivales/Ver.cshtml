@model WebSImus.Models.FestivalDetalleViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Ver Festival";
}

<div class="modern-profile-form">
    <div class="form-header">
        <h2 class="form-title"><i class="fas fa-eye"></i> Ver Festival</h2>
    </div>

    <div class="form-content">
        <!-- Datos B치sicos -->
        <div class="form-section">
            <h3 class="section-title"><i class="fas fa-folder-open"></i> Datos B&aacute;sicos</h3>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label class="form-label">Nombre del festival <span class="text-danger">*</span></label>
                    <div class="form-control-static">@Model.Nombre</div>
                </div>
                <div class="form-group col-md-3">
                    <label class="form-label">N&uacute;mero de versiones realizadas <span class="text-danger">*</span></label>
                    <div class="form-control-static">@(Model.VersionesRealizadas.HasValue ? Model.VersionesRealizadas.Value.ToString() : "N/A")</div>
                </div>
                <div class="form-group col-md-3">
                    <label class="form-label">Fecha en la que se realiz&oacute; la &Uacute;ltima versi&oacute;n <span class="text-danger">*</span></label>
                    <div class="form-control-static">@(Model.FechaUltimaVersion.HasValue ? Model.FechaUltimaVersion.Value.ToString("dd/MM/yyyy") : "N/A")</div>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-12">
                    <label class="form-label">Descripci&oacute;n del festival</label>
                    <div class="form-control-static">@(string.IsNullOrWhiteSpace(Model.Descripcion) ? "Sin descripci칩n" : Model.Descripcion)</div>
                </div>
            </div>
        </div>

        <!-- Datos de Contacto y Observaciones -->
        <div class="form-section">
            <h3 class="section-title"><i class="fas fa-address-book"></i> Datos de Contacto y Observaciones</h3>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label class="form-label">Correo electr&oacute;nico de contacto <span class="text-danger">*</span></label>
                    <div class="form-control-static">@Model.CorreoContacto</div>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-4">
                    <label class="form-label">Instagram</label>
                    <div class="form-control-static">
                        @if (!string.IsNullOrWhiteSpace(Model.Instagram))
                        {
                            <a href="https://instagram.com/@Model.Instagram.TrimStart('@')" target="_blank">@Model.Instagram</a>
                        }
                        else
                        {
                            <text>N/A</text>
                        }
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label class="form-label">Facebook</label>
                    <div class="form-control-static">
                        @if (!string.IsNullOrWhiteSpace(Model.Facebook))
                        {
                            <a href="@(Model.Facebook.StartsWith("http") ? Model.Facebook : "https://" + Model.Facebook)" target="_blank">@Model.Facebook</a>
                        }
                        else
                        {
                            <text>N/A</text>
                        }
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label class="form-label">P&aacute;gina WEB</label>
                    <div class="form-control-static">
                        @if (!string.IsNullOrWhiteSpace(Model.PaginaWeb))
                        {
                            <a href="@(Model.PaginaWeb.StartsWith("http") ? Model.PaginaWeb : "https://" + Model.PaginaWeb)" target="_blank">@Model.PaginaWeb</a>
                        }
                        else
                        {
                            <text>N/A</text>
                        }
                    </div>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-4">
                    <label class="form-label">Otro enlace</label>
                    <div class="form-control-static">
                        @if (!string.IsNullOrWhiteSpace(Model.OtroEnlace))
                        {
                            <a href="@(Model.OtroEnlace.StartsWith("http") ? Model.OtroEnlace : "https://" + Model.OtroEnlace)" target="_blank">@Model.OtroEnlace</a>
                        }
                        else
                        {
                            <text>N/A</text>
                        }
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label class="form-label">Tel&eacute;fono celular</label>
                    <div class="form-control-static">@(string.IsNullOrWhiteSpace(Model.Celular) ? "N/A" : Model.Celular)</div>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-12">
                    <label class="form-label">Observaciones</label>
                    <div class="form-control-static">@(string.IsNullOrWhiteSpace(Model.ObservacionesContacto) ? "N/A" : Model.ObservacionesContacto)</div>
                </div>
            </div>
        </div>

        <!-- Informaci칩n del Registro -->
        <div class="form-section">
            <h3 class="section-title"><i class="fas fa-info-circle"></i> Informaci&oacute;n del Registro</h3>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label class="form-label">Fecha de Env&iacute;o</label>
                    <div class="form-control-static">@(Model.FechaEnvio.HasValue ? Model.FechaEnvio.Value.ToString("dd/MM/yyyy HH:mm") : "N/A")</div>
                </div>
                <div class="form-group col-md-6">
                    <label class="form-label">Estado</label>
                    <div class="form-control-static">
                        <span class="label label-info">@Model.Estado</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Botones de acci칩n -->
        <div class="form-footer">
            <a href="@Url.Action("Listado", "Festivales")" class="btn btn-secondary-cancel">
                <i class="fas fa-arrow-left"></i> Volver al Listado
            </a>
            <div>
                <a href="@Url.Action("Crear", "Festivales", new { id = Model.Id })" class="btn btn-primary-save">
                    <i class="fas fa-edit"></i> Editar
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    /* Estilos reusados del perfil (SimusPerfil) */
    .modern-profile-form {
        max-width: 1100px;
        margin: 10px auto;
        padding: 30px;
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    }
    .form-header { margin-bottom: 20px; text-align: center; color: #4b3c8c; }
    .form-title { color: #4b3c8c; font-weight: 600; margin-bottom: 5px; font-size: 24px; display: flex; align-items: center; justify-content: center; gap: 10px; }
    .form-section { margin-bottom: 30px; padding-bottom: 20px; border-bottom: 1px solid #ecf0f1; }
    .form-section:last-of-type { border-bottom: none; }
    .section-title { color: #4b3c8c; font-size: 18px; margin-bottom: 15px; display: flex; align-items: center; gap: 10px; }
    .form-row { display: flex; flex-wrap: wrap; gap: 20px; margin-bottom: 10px; }
    .form-group { flex: 1; min-width: 200px; }
    .form-label { display: block; margin-bottom: 6px; font-weight: 500; color: #34495e; }
    
    /* Estilo para campos en modo solo lectura */
    .form-control-static {
        padding: 10px 12px;
        background-color: #f8f9fa;
        border: 1px solid #e1e5eb;
        border-radius: 8px;
        min-height: 40px;
        color: #2c3e50;
        word-wrap: break-word;
    }
    
    .form-control-static a {
        color: #4b3c8c;
        text-decoration: underline;
    }
    
    .form-control-static a:hover {
        color: #281e52;
    }
    
    .form-footer { display: flex; justify-content: space-between; gap: 15px; margin-top: 10px; }
    .btn { padding: 10px 18px; border-radius: 8px; font-weight: 500; transition: all 0.3s; display: inline-flex; align-items: center; gap: 8px; border: none; cursor: pointer; font-size: 14px; text-decoration: none; }
    .btn-secondary-cancel { background-color: #ecf0f1; color: #34495e; border: 1px solid #d5dbdb; }
    .btn-secondary-cancel:hover { background-color: #e0e0e0; text-decoration: none; }
    .btn-primary-save { background-color: #4b3c8c; color: #fff; }
    .btn-primary-save:hover { background-color: #281e52; color: #fff; text-decoration: none; }
    
    .label {
        display: inline-block;
        padding: 5px 12px;
        font-size: 13px;
        font-weight: 600;
        border-radius: 5px;
    }
    
    .label-info {
        background-color: #5bc0de;
        color: #fff;
    }
</style>

