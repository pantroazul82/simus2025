@model WebSImus.Models.FestivalVersionListadoItemViewModel
<div class="modal-body">
    <div class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-3 control-label">Versión</label>
            <div class="col-sm-9">
                <p class="form-control-static">@Model.NombreVersion</p>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">Fecha Creación</label>
            <div class="col-sm-9">
                <p class="form-control-static">@Model.FechaCreacion.ToString("dd/MM/yyyy")</p>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">Fecha Solicitud</label>
            <div class="col-sm-9">
                <p class="form-control-static">@(Model.FechaSolicitud.HasValue ? Model.FechaSolicitud.Value.ToString("dd/MM/yyyy") : "-")</p>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">Estado</label>
            <div class="col-sm-9">
                <p class="form-control-static">@Model.Estado</p>
            </div>
        </div>
    </div>
</div>