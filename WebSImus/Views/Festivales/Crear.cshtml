@model WebSImus.Models.FestivalRegistroViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = Model.EsEdicion ? "Editar Festival" : "Registro de Festival";
}
<div class="modern-profile-form">
    <div class="form-header">
        <h2 class="form-title"><i class="fas fa-music"></i> @(Model.EsEdicion ? "Editar Festival" : "Registro de Festival")</h2>
    </div>

    @if (TempData["Msg"] != null) {
        <div class="alert alert-success">@TempData["Msg"]</div>
    }
    @if (!ViewData.ModelState.IsValid) {
        <div class="alert alert-warning">@Html.ValidationSummary()</div>
    }

    @using (Html.BeginForm("Crear", "Festivales", FormMethod.Post, new { @id = "frmFestival", @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.ActiveTab)
        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.EsEdicion)

        <ul class="nav nav-tabs tabs-modern" role="tablist">
            <li role="presentation" class="@(Model.ActiveTab == "festival" ? "active" : "")">
                <a href="#tabFestival" aria-controls="tabFestival" role="tab" data-toggle="tab">FESTIVAL</a>
            </li>
            <li role="presentation" class="@(Model.ActiveTab == "versiones" ? "active" : "") @(!Model.EsEdicion ? "disabled" : "")" title="@(!Model.EsEdicion ? "Debe guardar el festival primero para agregar versiones" : "")">
                @if (Model.EsEdicion)
                {
                    <a href="#tabVersiones" aria-controls="tabVersiones" role="tab" data-toggle="tab">VERSIONES</a>
                }
                else
                {
                    <a href="#" style="cursor: not-allowed; color: #999;">VERSIONES</a>
                }
            </li>
        </ul>

        <div class="tab-content" style="padding-top:15px;">
            <div role="tabpanel" class="tab-pane @(Model.ActiveTab == "festival" ? "active" : "")" id="tabFestival">
                <!-- Datos B&aacute;sicos -->
                <div class="form-section">
                    <h3 class="section-title"><i class="fas fa-folder-open"></i> Datos B&aacute;sicos</h3>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label class="form-label">Nombre del festival <span class="text-danger">*</span></label>
                            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control modern-input", placeholder = "Nombre del festival", required = "required", data_validate = "required", maxlength = "200" })
                            <span class="field-validation-error" data-valmsg-for="Nombre" style="display:none;"></span>
                        </div>
                        <div class="form-group col-md-3">
                            <label class="form-label">N&uacute;mero de versiones realizadas <span class="text-danger">*</span></label>
                            @Html.TextBoxFor(m => m.NumeroVersiones, new { @class = "form-control modern-input", type = "number", min = "0", max = "9999", placeholder = "0", required = "required", data_validate = "required" })
                            <span class="field-validation-error" data-valmsg-for="NumeroVersiones" style="display:none;"></span>
                        </div>
                        <div class="form-group col-md-3">
                            <label class="form-label">Fecha en la que se realiz&oacute; la &uacute;ltima versi&oacute;n <span class="text-danger">*</span></label>
                            @Html.TextBoxFor(m => m.FechaUltimaVersion, "{0:yyyy-MM-dd}", new { @class = "form-control modern-input", type = "date", required = "required", data_validate = "required,date", max = DateTime.Now.ToString("yyyy-MM-dd") })
                            <span class="field-validation-error" data-valmsg-for="FechaUltimaVersion" style="display:none;"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label class="form-label">Descripci&oacute;n del festival</label>
                            @Html.TextAreaFor(m => m.Descripcion, 5, 10, new { @class = "form-control modern-input", placeholder = "Descripción del festival", style = "height:auto;" })
                            <small class="text-muted">Nota: Breve descripci&oacute;n del festival; describe las particularidades de la frecuencia con la que se realiza el evento y en caso de que no se realice siempre en las mismas fechas, los intervalos de las variaciones.</small>
                        </div>
                    </div>
                </div>

                <!-- Datos de Contacto y Observaciones -->
                <div class="form-section">
                    <h3 class="section-title"><i class="fas fa-address-book"></i> Datos de Contacto y Observaciones</h3>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label class="form-label">Correo electr&oacute;nico de contacto <span class="text-danger">*</span></label>
                            @Html.TextBoxFor(m => m.CorreoContacto, new { @class = "form-control modern-input email-field", type = "email", placeholder = "ejemplo@ejemplo.com", required = "required", data_validate = "required,email", maxlength = "100" })
                            <span class="field-validation-error" data-valmsg-for="CorreoContacto" style="display:none;"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label class="form-label">Instagram <span class="text-danger" id="instagramRequired" style="display:none;">*</span></label>
                            @Html.TextBoxFor(m => m.Instagram, new { @class = "form-control modern-input social-field", placeholder = "https://instagram.com/usuario", data_validate = "url", data_domain = "instagram.com", maxlength = "200" })
                            <span class="field-validation-error" data-valmsg-for="Instagram" style="display:none;"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label class="form-label">Facebook <span class="text-danger" id="facebookRequired" style="display:none;">*</span></label>
                            @Html.TextBoxFor(m => m.Facebook, new { @class = "form-control modern-input social-field", placeholder = "https://facebook.com/pagina", data_validate = "url", data_domain = "facebook.com", maxlength = "200" })
                            <span class="field-validation-error" data-valmsg-for="Facebook" style="display:none;"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label class="form-label">P&aacute;gina WEB <span class="text-danger" id="webRequired" style="display:none;">*</span></label>
                            @Html.TextBoxFor(m => m.PaginaWeb, new { @class = "form-control modern-input social-field", placeholder = "https://ejemplo.com", data_validate = "url", maxlength = "200" })
                            <span class="field-validation-error" data-valmsg-for="PaginaWeb" style="display:none;"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <small class="text-warning"><strong>*</strong> Debe diligenciar al menos uno de los 3 campos (Instagram, Facebook o P&aacute;gina WEB).</small>
                            <span class="field-validation-error" id="socialMediaError" style="display:none;"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label class="form-label">Otro enlace</label>
                            @Html.TextBoxFor(m => m.OtroEnlace, new { @class = "form-control modern-input", placeholder = "https://ejemplo.com", data_validate = "url", maxlength = "200" })
                            <span class="field-validation-error" data-valmsg-for="OtroEnlace" style="display:none;"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label class="form-label">Tel&eacute;fono celular</label>
                            @Html.TextBoxFor(m => m.TelefonoCelular, new { @class = "form-control modern-input phone-field", placeholder = "3001234567", data_validate = "phone", maxlength = "15" })
                            <span class="field-validation-error" data-valmsg-for="TelefonoCelular" style="display:none;"></span>
                            <small class="text-muted">Nota: En caso de tel&eacute;fono fijo, agregar el indicativo de la ciudad + n&uacute;mero de tel&eacute;fono. Ejemplo: 6041234567.</small>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label class="form-label">Observaciones</label>
                            @Html.TextAreaFor(m => m.Observaciones, 4, 10, new { @class = "form-control modern-input", placeholder = "Observaciones", style = "height:auto;" })
                        </div>
                    </div>
                </div>

                <div class="form-footer">
                    <button id="btnGuardar" name="accion" value="Guardar" type="submit" class="btn btn-primary-save"><i class="fas fa-save"></i> Guardar</button>
                    <div>
                        <button id="btnSiguiente" name="accion" value="Siguiente" type="submit" class="btn btn-primary-save"><i class="fas fa-arrow-right"></i> Siguiente</button>
                        <button id="btnCancelar" name="accion" value="Cancelar" type="button" class="btn btn-secondary-cancel"><i class="fas fa-times"></i> Cancelar</button>
                    </div>
                </div>
            </div>

            <div role="tabpanel" class="tab-pane @(Model.ActiveTab == "versiones" ? "active" : "")" id="tabVersiones">
                <div class="row" style="margin-bottom:10px;">
                    <div class="col-sm-4 col-md-3">
                        <form id="frmBuscarVersion" class="form-inline" onsubmit="return false;">
                            <div class="input-group" style="width:100%;">
                                <input type="text" id="txtBuscarVersion" class="form-control" placeholder="Buscar" />
                                <span class="input-group-btn">
                                    <button id="btnBuscarVersion" class="btn btn-default" type="button"><span class="fa fa-search"></span></button>
                                </span>
                            </div>
                        </form>
                    </div>
                    <div class="col-sm-8 col-md-9 text-right">
                        <a href="@Url.Action("RegistrarVersion", "Festivales", new { festivalId = Model.Id })" class="btn btn-primary-save"><i class="fa fa-plus"></i> Crear Versi&oacute;n</a>
                    </div>
                </div>

                <div id="divGridVersiones">
                    @{ Html.RenderAction("GridVersionesPartial", "Festivales", new { festivalId = Model.Id }); }
                </div>

                <!-- Modal Crear Versión -->
                <div id="modalCrearVersion" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                <h4 class="modal-title">Crear Versi&oacute;n</h4>
                            </div>
                            <div class="modal-body">
                                <div id="frmCrearVersion" class="form">
                                    <div class="form-group">
                                        <label>Nombre de la versi&oacute;n <span class="text-danger">*</span></label>
                                        <input name="NombreVersion" class="form-control" />
                                    </div>
                                    <div class="form-group">
                                        <label>Fecha de creaci&oacute;n</label>
                                        <input type="date" name="FechaCreacion" class="form-control" />
                                    </div>
                                    <div class="form-group">
                                        <label>Fecha solicitud</label>
                                        <input type="date" name="FechaSolicitud" class="form-control" />
                                    </div>
                                    <div class="form-group">
                                        <label>Estado</label>
                                        <select name="Estado" class="form-control">
                                            <option value="Incompleto">Incompleto</option>
                                            <option value="Registrado">Registrado</option>
                                            <option value="Rechazado">Rechazado</option>
                                            <option value="Solicitud de Aclaraciones">Solicitud de Aclaraciones</option>
                                            <option value="Publicado">Publicado</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary-cancel" data-dismiss="modal">Cancelar</button>
                                <button type="button" id="btnGuardarVersion" class="btn btn-primary-save"><i class="fa fa-save"></i> Guardar</button>
                            </div>
                        </div>
                    </div>
                </div>

                
            </div>
        </div>
    }
</div>

@section scripts{
<script>
    (function(){
        var formSubmitting = false;

        // Activar pestanias
        function activarTabsSinBootstrap(){
            $(".tabs-modern a[aria-controls]").off('click.fallback').on('click.fallback', function(e){
                e.preventDefault();
                var href = $(this).attr('href');
                $(this).closest('ul').find('li').removeClass('active');
                $(this).parent().addClass('active');
                $('.tab-pane').removeClass('active');
                $(href).addClass('active');
                if(href === '#tabVersiones') $('#ActiveTab').val('versiones'); else $('#ActiveTab').val('festival');
            });
        }
        activarTabsSinBootstrap();

        // Activar pestaña de versiones si viene como parametro
        var activeTabValue = '@Model.ActiveTab';
        if(activeTabValue === 'versiones'){
            $(".tabs-modern a[href='#tabVersiones']").trigger('click');
        }

        // Utilidades de validacion
        function mostrarError(campo, mensaje){
            var $campo = $(campo);
            $campo.addClass('input-error');
            var $error = $campo.siblings('.field-validation-error');
            if($error.length){
                $error.text(mensaje).show();
            }
        }

        function limpiarError(campo){
            var $campo = $(campo);
            $campo.removeClass('input-error');
            var $error = $campo.siblings('.field-validation-error');
            if($error.length){
                $error.hide().text('');
            }
        }

        function limpiarTodosErrores(){
            $('.input-error').removeClass('input-error');
            $('.field-validation-error').hide().text('');
            $('#socialMediaError').hide().text('');
        }

        // Normalización de teléfono (solo dígitos)
        $('.phone-field').on('input', function(){
            var valor = $(this).val();
            var normalizado = valor.replace(/[^\d]/g, '');
            $(this).val(normalizado);
        });

        // VALIDACIONES SENCILLAS - Solo campos obligatorios
        $('#frmFestival').on('submit', function(e){
            limpiarTodosErrores();
            
            var esValido = true;
            
            // Nombre (obligatorio)
            if(!$('#Nombre').val().trim()){
                mostrarError('#Nombre', 'El nombre del festival es obligatorio');
                esValido = false;
            }
            
            // Número de versiones (obligatorio, mayor o igual a 0)
            var numVersiones = $('#NumeroVersiones').val();
            if(numVersiones === '' || numVersiones === null || parseInt(numVersiones) < 0){
                mostrarError('#NumeroVersiones', 'El número de versiones es obligatorio');
                esValido = false;
            }
            
            // Fecha última versión (obligatorio)
            if(!$('#FechaUltimaVersion').val()){
                mostrarError('#FechaUltimaVersion', 'La fecha de última versión es obligatoria');
                esValido = false;
            }
            
            // Correo de contacto (obligatorio)
            if(!$('#CorreoContacto').val().trim()){
                mostrarError('#CorreoContacto', 'El correo de contacto es obligatorio');
                esValido = false;
            }
            
            if(!esValido){
                e.preventDefault();
                return false;
            }
            
            return true;
        });

        // Botón cancelar
        $('#btnCancelar').on('click', function(){
            window.location.href = '@Url.Action("Listado", "Festivales")';
        });

        // Versiones: UI
        function recargarGridVersiones(filtro){
            var festivalId = @(Model.Id > 0 ? Model.Id.ToString() : "0");
            var url = '@Url.Action("GridVersionesPartial","Festivales")' + '?festivalId=' + festivalId;
            if(filtro){
                url += '&filtroTexto=' + encodeURIComponent(filtro);
            }
            $("#divGridVersiones").load(url);
        }

        $("#btnBuscarVersion").on('click', function(){ recargarGridVersiones($("#txtBuscarVersion").val()); });
        $("#txtBuscarVersion").on('keypress', function(e){ if(e.which===13){ $("#btnBuscarVersion").click(); }});
    })();
</script>
}

