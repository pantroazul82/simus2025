@model SM.LibreriaComun.DTO.EstudiantesEstadisticasDTO

<div class="row mb-4">
    <div class="col-12 d-flex flex-wrap justify-content-center gap-3">
        <a id="hRangos" href="#" class="btn btn-outline-primary">Rangos Etarios</a>
        <a id="hUbicacion" href="#" class="btn btn-outline-primary">Ubicación Territorial</a>
        <a id="hGrupo" href="#" class="btn btn-outline-primary">Grupo Étnico</a>
        <a id="hSexo" href="#" class="btn btn-outline-primary">Sexo</a>
    </div>
</div>

<div class="chart-section">
    <h2 class="chart-title">Estudiantes atendidos por rangos etarios</h2>
    <div class="chart-container">
        <div id="rangoEdadContainer" style="height: 400px; width: 100%;"></div>
    </div>
    <div class="d-flex justify-content-between mt-2">
        <a href="#top" class="btn btn-outline-primary"><i class="fa-solid fa-arrow-up"></i> Ir arriba</a>
        @Html.ActionLink("Exportar datos a Excel", "descargar", "Indicadores", new { numReporte = 6, periodo = Model.selectorAno }, new { @class = "btn btn-outline-primary" })
    </div>
</div>

<div class="chart-section">
    <h2 class="chart-title">Ubicación territorial</h2>
    <div class="chart-desc">Estudiantes según su localización urbana o rural.</div>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="chart-container">
                <div class="row">
                    <div class="col-md-6 text-center">
                        <div class="fw-bold text-primary">Urbana</div>
                        <div class="fw-bold text-primary">@Html.DisplayFor(m => m.Urbana)</div>
                        <div class="fw-bold text-success">@Html.DisplayFor(m => m.PorcentajeUrbana)%</div>
                    </div>
                    <div class="col-md-6 text-center">
                        <div class="fw-bold text-primary">Rural</div>
                        <div class="fw-bold text-primary">@Html.DisplayFor(m => m.Rural)</div>
                        <div class="fw-bold text-success">@Html.DisplayFor(m => m.PorcentajeRural)%</div>
                    </div>
                </div>
                <div id="ubicacionContainer" style="height: 500px; width: 100%;" class="mt-3"></div>
            </div>
            <div class="d-flex justify-content-between mt-2">
                <a href="#top" class="btn btn-outline-primary"><i class="fa-solid fa-arrow-up"></i> Ir arriba</a>
                @Html.ActionLink("Exportar datos a Excel", "descargar", "Indicadores", new { numReporte = 7, periodo = Model.selectorAno }, new { @class = "btn btn-outline-primary" })
            </div>
        </div>
    </div>
</div>

<div class="chart-section">
    <h2 class="chart-title">Grupo étnico</h2>
    <div class="chart-container">
        <div id="grupoEtnicoContainer" style="height: 350px; width: 100%;"></div>
    </div>
    <div class="d-flex justify-content-between mt-2">
        <a href="#top" class="btn btn-outline-primary"><i class="fa-solid fa-arrow-up"></i> Ir arriba</a>
        @Html.ActionLink("Exportar datos a Excel", "descargar", "Indicadores", new { numReporte = 8, periodo = Model.selectorAno }, new { @class = "btn btn-outline-primary" })
    </div>
</div>

<div class="chart-section">
    <h2 class="chart-title">Por sexo</h2>
    <div class="chart-container">
        <div id="sexoContainer" style="height: 500px; width: 100%;"></div>
    </div>
    <div class="d-flex justify-content-between mt-2">
        <a href="#top" class="btn btn-outline-primary"><i class="fa-solid fa-arrow-up"></i> Ir arriba</a>
        @Html.ActionLink("Exportar datos a Excel", "descargar", "Indicadores", new { numReporte = 9, periodo = Model.selectorAno }, new { @class = "btn btn-outline-primary" })
    </div>
</div>
