@model SM.LibreriaComun.DTO.EscuelasEstadisticasDTO

<div class="chart-section">
    <h2 class="chart-title">
        <i class="fa-solid fa-map"></i> Escuelas de Música por Departamento
    </h2>

    <div class="row mb-3">
        <div class="col-md-6 col-sm-12">
            <p class="chart-desc"># de Escuelas de Música por Departamento</p>
        </div>
        <div class="col-md-6 col-sm-12 d-flex flex-wrap gap-3">
            <div class="d-flex align-items-center">
                <div class="circle-blue1 me-2"></div>
                <span class="titulo_porcentaje">0 al 50</span>
            </div>
            <div class="d-flex align-items-center">
                <div class="circle-blue2 me-2"></div>
                <span class="titulo_porcentaje">51 a 70</span>
            </div>
            <div class="d-flex align-items-center">
                <div class="circle-blue3 me-2"></div>
                <span class="titulo_porcentaje">71 a 95</span>
            </div>
            <div class="d-flex align-items-center">
                <div class="circle-blue4 me-2"></div>
                <span class="titulo_porcentaje">100</span>
            </div>
        </div>
    </div>

    <div class="chart-container p-0">
        <div id="PanelMapa" style="height: 800px;"></div>
    </div>

    <div id="info_dpto" class="mt-3"></div>
    <div id="modalInformacion" class="mt-3">
        @Html.Action("_DetalleMapa", new { CodDepto = "" })
    </div>
</div>
</div>
