@model WebSImus.Models.EntidadModels
@using MvcCheckBoxList.Model
@{
    ViewBag.Title = "Entidad";
    Layout = "~/Views/Shared/_LayoutEstandar.cshtml";
}

@using (Html.BeginForm("Entidad", "Entidad", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
{

    <div class="panel panel-primary form-horizontal">
        <div class="panel-heading">
            <h3 class="panel-title"><span class="glyphicon glyphicon-star"></span> Datos básicos y ubicación</h3>
        </div>
        @Html.ValidationSummary(true, "", new { @style = "color:#DC143C;" })
        @Html.AntiForgeryToken()
        <div class="panel-body" id="panelEditar">
            <div class="panel panel-default">
                <div class="row">
                    <div class="col-md-4 push-up-20">
                        <div class="form-group">
                            <div class="" id="user_image">
                                <img src="@Url.Content(ViewBag.ImageData)" class="img-thumbnail" />
                            </div>

                        </div>


                    </div>
                    <div class="col-md-8 push-up-20">
                        @Html.HiddenFor(model => model.CodigoPais) 
                        <div class="form-group">
                            <label class="col-md-3 control-label">* Nombre</label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control text", @maxlength = "200" })
                                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">* Nit</label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.Nit, new { @class = "form-control text", @maxlength = "9" })
                                @Html.ValidationMessageFor(model => model.Nit, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Digito Verificación</label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.DigitoVerificacion, new { @class = "form-control text", @maxlength = "1" })
                                @Html.ValidationMessageFor(model => model.DigitoVerificacion, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        @*<div class="form-group">
                            <label class="col-md-3 control-label">* País</label>
                            <div class="col-md-9">
                                @Html.DropDownListFor(model => model.CodigoPais, (SelectList)ViewBag.listPaises, "Seleccione un país", new { @class = "styled-select" })
                                @Html.ValidationMessageFor(model => model.CodigoPais, "", new { @class = "text-danger" })
                            </div>
                        </div>*@
                        <div class="form-group">
                            <label class="col-md-3 control-label">Departamento</label>
                            <div class="col-md-9">
                                @Html.DropDownListFor(model => model.CodigoDepartamento, (SelectList)ViewBag.listDepartamentos, "Seleccione un departamento", new { @class = "styled-select" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">Municipio</label>
                            <div class="col-md-9">
                                @Html.DropDownListFor(model => model.CodigoMunicipio, (SelectList)ViewBag.listMunicipio, "Seleccione un municipio", new { @class = "styled-select" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">* Dirección</label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.Direccion, new { @class = "form-control text", @maxlength = "200" })
                                @Html.ValidationMessageFor(model => model.Direccion, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 push-up-20">
                    </div>
                    <div class="col-md-8 push-up-20">

                        <div class="form-group">
                            <label class="col-md-3 control-label"> Teléfono</label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.Telefono, new { @class = "form-control text", @maxlength = "50" })
                                @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">* Correo Electrónico</label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.CorreoElectronico, new { @class = "form-control text", @maxlength = "50" })
                                @Html.ValidationMessageFor(model => model.CorreoElectronico, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label"> Subir foto</label>

                            <div class="col-md-9">
                                <p>Tipos de archivo permitidos: .jpg y .png de tamaño máximo 1 Mb</p>
                                <input onclick="resizePanel()" id="imagenPerfil" name="imagenPerfil" type="file">
                            </div>

                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">Pagina Web</label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.LinkPortafolio, new { @class = "form-control text", @maxlength = "200", @placeholder = "http://www.mincultura.gov.co" })
                                @Html.ValidationMessageFor(model => model.LinkPortafolio, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">Naturaleza</label>
                            <div class="col-md-9">
                                @Html.DropDownListFor(model => model.Naturaleza, (SelectList)ViewBag.listNaturaleza, "Seleccione un valor", new { @class = "styled-select" })
                                @Html.ValidationMessageFor(model => model.Naturaleza, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">Tipo entidad</label>
                            <div class="col-md-9">
                                @{
    var htmlListInfo = new HtmlListInfo(HtmlTag.vertical_columns, 1);

    @Html.CheckBoxListFor(model => model.TipoEntidadPublicado,
                                              model => model.TipoEntidadData,
                                              entity => entity.Id,
                                              entity => entity.Nombre,
                                   model => model.TipoEntidadSeleccionada, htmlListInfo);
                                }
                            </div>
                        </div>



                        <div class="form-group">
                            <label class="col-md-3 control-label">Descripción</label>
                            <div class="col-md-9">
                                @Html.TextAreaFor(model => model.Descripcion, new { @class = "form-control text", @rows = "5", @cols = "50" })
                                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>

                @*<div class="panel panel-colorful push-up-20">
                        <div class="panel-heading">
                            <h4 class="panel-title text-info"><span class="glyphicon glyphicon-globe"></span> Mapamundi</h4>
                            <div class="pull-right" style="width: 200px;">
                                <input type="text" class="form-control" placeholder="Select country" id="vector_world_map_value" />
                            </div>
                        </div>
                        <div class="panel-body panel-body-map">
                            <iframe frameborder="0" scrolling="no" marginheight="0" marginwidth="0" width="100%" height="300px" src="https://maps.google.com/maps?hl=en&q=caparrapi&ie=UTF8&t=roadmap&z=15&iwloc=B&output=embed">
                                <div><small><a href="http://embedgooglemaps.com">by embedgooglemaps.com</a></small></div>
                                <div><small><a href="http://www.embedgooglemaps.com">embed google map</a></small></div>
                            </iframe>
                        </div>
                    </div>*@


            </div>

            <div class="panel-footer">
                <input type="submit" value="Guardar" name="Guardar" class="btn btn-primary pull-right" id="btnGuardar" />

            </div>
        </div>
    </div>

}
@section Scripts {

    @Scripts.Render("~/Scripts/jqueryval")
    <script src="@Url.Content("~/Scripts/plugins/icheck/icheck.js")"></script>
    <script src="@Url.Content("~/Scripts/plugins/fileinput/fileinput.js")"></script>
    <script src="@Url.Content("~/Scripts/plugins/fileinput/fileinput_locale_es.js")"></script>

    <script type="text/javascript">
        var pagecontentwrapHeight = $(".page-content-wrap").height();
        $('#panelEditar').css("height", pagecontentwrapHeight);

        $('#imagenPerfil').fileinput({
            showUpload: false,
            language: 'es',
            overwriteInitial: true,
            maxFileSize: 1024,
            allowedFileExtensions: ['jpg', 'png'],
        });


        $(window).on('resize', function () {
            var new_pagecontentwrapHeight = pagecontentwrapHeight + 200;
            $('#panelEditar').css("height", new_panelbodyHeight);
            $('#panelEditar').css("min-height", pagecontentwrapHeight + 350);
        });

        function resizePanel() {
            var new_pagecontentwrapHeight = pagecontentwrapHeight + 200;
            $('#panelEditar').css("height", new_pagecontentwrapHeight);
        };

        $(function () {
            $('#CodigoDepartamento').change(function () {
                var selectedDep = $(this).val();
                var city = $('#CodigoMunicipio');

                if (selectedDep != null && selectedDep != '') {

                    $.getJSON('@Url.Action("ObtenerMunicipio")', { departamento: selectedDep }, function (data) {
                        var items = '';
                        items = '<option>Seleccione un municipio </option>';
                        $.each(data, function (i, municipio) {
                            items += "<option value='" + municipio.value + "'>" + municipio.text + "</option>";

                        });
                        city.empty();
                        city.html(items);
                        city.click();

                    });

                }

            })

            // por país
            $('#CodigoPais').change(function () {
                var selectedDep = $(this).val();
                var city = $('#CodigoDepartamento');
                var varmunicipio = $('#CodigoMunicipio');

                if (selectedDep != null && selectedDep != '') {

                    $.getJSON('@Url.Action("ObtenerDepartamento")', { codigopais: selectedDep }, function (data) {
                        var items = '';
                        items = '<option>Seleccione un departamento </option>';
                        $.each(data, function (i, departamento) {
                            items += "<option value='" + departamento.value + "'>" + departamento.text + "</option>";

                        });
                        city.empty();
                        city.html(items);
                        city.click();
                        varmunicipio.empty();

                    });

                }

            })
        });
    </script>
}

