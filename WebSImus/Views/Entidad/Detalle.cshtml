@model WebSImus.Models.EntidadDatosModels
@using SM.LibreriaComun.DTO;
@{
    ViewBag.Title = "Detalle Entidad";
    Layout = "~/Views/Shared/_LayoutEstandar.cshtml";
}

@section Scripts
{

    <script src="@Url.Content("~/Scripts/toDo/demo_edit_profile.js")"></script>
}
<ul class="breadcrumb">
    <li>@Html.ActionLink("Inicio", "Index", "Inicio")</li>
    <li>@Html.ActionLink("Entidad", "Index", "Entidad")</li>
</ul>
<div class="row">
    <div class="col-md-3 col-sm-4 col-xs-5">

        <form action="#" class="form-horizontal">
            <div class="panel panel-default">
                <div class="panel-body">
                    <h3><span class="fa-representante fa-2x"></span> Datos de Identificación</h3>
                    <p>@Html.DisplayFor(m => m.Nombre, new { @class = "panel-title" })</p>
                    <div class="text-center" id="user_image">
                        <img src="@Url.Content(ViewBag.ImageData)" class="img-thumbnail" />
                    </div>
                </div>
                <div class="panel-body form-group-separated">

                    <div class="form-group">
                        <label class="col-md-3 col-xs-5 control-label">Estado</label>
                        <div class="col-md-9 col-xs-7 line-height-30">
                            @Html.DisplayFor(m => m.Estado)
                        </div>
                    </div>


                </div>
            </div>
        </form>

    </div>
    <div class="col-md-9 col-sm-8 col-xs-7">


        <div class="panel panel-default form-horizontal ">
            <div class="panel-body">
                <h3><span class="fa fa-pencil"></span> Perfil</h3>

            </div>
            <div class="panel-body form-group-separated">
                <div class="form-group">
                    <label class="col-md-4 control-label">Nombres</label>
                    <div class="col-md-8 col-xs-7 col-xs-7 line-height-30">
                        @Html.DisplayFor(m => m.Nombre)
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4 control-label">Nit</label>
                    <div class="col-md-8 col-xs-7 col-xs-7 line-height-30">
                        @Html.DisplayFor(m => m.Nit)
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4 col-xs-5 control-label">Naturaleza</label>
                    <div class="col-md-8 col-xs-7 col-xs-7 line-height-30">
                        @Html.DisplayFor(m => m.Naturaleza)
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4 col-xs-5 control-label">País</label>
                    <div class="col-md-8 col-xs-7 col-xs-7 col-xs-7 line-height-30">
                        @Html.DisplayFor(m => m.Pais)
                    </div>
                </div>


                <div class="form-group">
                    <label class="col-md-4 col-xs-5 control-label">Departamento</label>
                    <div class="col-md-8 col-xs-7 line-height-30">
                        @Html.DisplayFor(m => m.Departamento)
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4 col-xs-5 control-label">Municipio</label>
                    <div class="col-md-8 col-xs-7 line-height-30">
                        @Html.DisplayFor(m => m.Municipio)
                    </div>
                </div>


                <div class="form-group">
                    <label class="col-md-4 col-xs-5 control-label">Correo electrónico</label>
                    <div class="col-md-8 col-xs-7  line-height-30">
                        @Html.DisplayFor(m => m.CorreoElectronico)
                    </div>
                </div>


                <div class="form-group">
                    <label class="col-md-4 col-xs-5 control-label">Pagina Web</label>
                    <div class="col-md-8 col-xs-7  line-height-30">
                        @Html.DisplayFor(m => m.LinkPortafolio)
                    </div>
                </div>

            </div>
        </div>



    </div>

</div>
