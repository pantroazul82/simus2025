@{
    ViewBag.Title = "Consulta de Menu y paginas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">

    <div class="col-md-12">
        @Html.DevExpress().Button(settings =>
        {
            settings.Name = "ButtonNuevoMenu";
            settings.UseSubmitBehavior = false;
            settings.Text = "Nuevo Menu";
            settings.RouteValues = new { Controller = "Recurso", Action = "CrearMenu" };
            settings.ControlStyle.ForeColor = System.Drawing.Color.White;
            settings.ControlStyle.BackColor = System.Drawing.ColorTranslator.FromHtml("#4b3c8c");
            settings.ControlStyle.CssClass = "custom-button";
        }).GetHtml()

        @Html.DevExpress().Button(settings =>
        {
            settings.Name = "ButtonNuevoPagina";
            settings.UseSubmitBehavior = false;
            settings.Text = "Nueva pagina";
            settings.RouteValues = new { Controller = "Recurso", Action = "CrearPagina" };
            settings.ControlStyle.ForeColor = System.Drawing.Color.White;
            settings.ControlStyle.BackColor = System.Drawing.ColorTranslator.FromHtml("#4b3c8c");
            settings.ControlStyle.CssClass = "custom-button";
        }).GetHtml()


        @Html.Action("GridViewConsultaRecurso")

        <div class="panel-footer">

            <div class="btn btn-default pull-left">
                <i class="fa fa-arrow-circle-o-left"></i>@Html.ActionLink("Regresar", "Index", "Inicio")
            </div>

        </div>

    </div>
</div>

<style>
    .custom-button {
        border-radius: 8px !important;
        padding: 4px 8px;
        font-weight: 400;
        border-color: #4b3c8c;
    }
</style>

@section Scripts {
    <script src="@Url.Content("~/Scripts/globalize/globalize.js")"></script>
    <script src="@Url.Content("~/Scripts/dx.webappjs.js")"></script>

}
