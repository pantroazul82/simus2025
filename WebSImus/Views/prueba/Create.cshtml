@model WebSImus.Models.Usuarios

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutEstandar.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
   @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Usuarios</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.usuario, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.usuario, new { style = "width:320px", @class = "form-control", @maxlength = "100", autocomplete = "off" })
                @Html.ValidationMessageFor(model => model.usuario)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.contrasena, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.contrasena, new { style = "width:320px", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.contrasena)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
