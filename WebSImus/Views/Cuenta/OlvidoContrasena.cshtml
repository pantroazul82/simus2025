@model WebSImus.Models.EmailModel
@{
    ViewBag.Title = "Recuperar Contraseña";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="login-container">
    <div class="logo-login">
        <a href="~/Home/Index">
            <img src="~/img/logo_simus.png" alt="Logo SIMUS" />
        </a>
    </div>

    @using (Html.BeginForm("Restablecer", "Cuenta", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <h2 class="subtitulo-login">Recuperar Contraseña</h2>

        @Html.ValidationSummary(false, "", new { @class = "validation-message" })

        <div class="form-group input-with-icon">
            <i class="fas fa-envelope"></i>
            @Html.TextBoxFor(s => s.usuario, new { @class = "form-control", placeholder = "Correo electrónico", maxlength = "100" })
        </div>

        <div class="form-group btn-group-row">
            <button type="submit" class="btn btn-primary">Restablecer</button>
            <a href="~/Cuenta/Login" class="btn btn-google">Regresar</a>
        </div>
    }
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    @Scripts.Render("~/Scripts/jqueryval")
}

<style>
    .btn-group-row {
        display: flex;
        gap: 1rem;
        justify-content: space-between;
        flex-wrap: wrap;
        margin-top: 1.5rem;
    }

    .subtitulo-login {
        font-size: 1.25rem;
        margin-bottom: 1.5rem;
        color: var(--text-color);
        text-align: center;
    }
</style>