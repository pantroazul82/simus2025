@model WebSImus.Models.AutenticacionViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLoginMusica.cshtml";
}

<div class="login-body">

    @using (Html.BeginForm("LoginMusica", "Cuenta", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
    {

        @Html.ValidationSummary(true, "", new { @style = "color:#444;" })
        <div class="logo-login-celebra">
            <a href="~/Home/Index"></a>
        </div>
        if (@Model.msg != null)
        {
            <div class="login-subtitle"><strong>@Model.msg </strong></div>
        }
        <form action="index.html" class="form-horizontal" method="post">
            <div class="form-group">
                <div class="col-md-12">
                    <div class="col-md-3">
                        <div class="text-login">*Usuario</div>
                    </div>
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.NombreUsuario, new { @class = "form-control prueba", @maxlength = "100", @autocomplete = "off" })
                        @Html.ValidationMessageFor(model => model.NombreUsuario, String.Empty, new { @style = "color: #444;" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <div class="col-md-3">
                        <div class="text-login">*Contraseña</div>
                    </div>
                    <div class="col-md-9">
                        @Html.PasswordFor(model => model.Contrasena, new { @class = "form-control", @maxlength = "100", @autocomplete = "off" })
                        @Html.ValidationMessageFor(model => model.Contrasena, String.Empty, new { @style = "color: #444;" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <div class="columna2">
                        @*<label class="col-md-3 control-label">*@
                        <a href="~/Cuenta/TerminosMusica" onclick="window.open(this.href, this.target, 'width=620,height=500'); return false;">Acepta términos y condiciones</a>

                        @*</label>*@
                    </div>
                    @Html.CheckBoxFor(m => m.AceptarTerminos, new { style = "color: #FFF; width:28px; height: 14px;" })
                    @Html.ValidationMessageFor(m => m.AceptarTerminos, String.Empty, new { @style = "color: #FFF;" })
                </div>
                <div class="col-md-12">
                    <div class="columna2"><input type="submit" value="Ingresar" class="btn btn-info btn-block" /></div>
                </div>
                <div class="col-md-12">
                    <div class="columna2"><a href="~/Cuenta/OlvidoContrasenaMusica" class="btn btn-link btn-block">¿Olvidaste la contraseña?</a></div>
                </div>
                <div class="col-md-12">
                    <div class="columna2"><a href="~/Cuenta/RegistrarseMusica" class="btn btn-link btn-block">Regístrate</a></div>
                </div>
            </div>
            <hr />
            @*<div class="subtitulo-login">
                    Puedes acceder al sistema usando tus cuentas de Google
                </div><br />
                <div class="form-group">
                    <div class="col-md-5">


                    </div>
                    <div class="col-md-7">
                        <input type="button" class="btn btn-google" onclick="loginMethods.authGoogle()" />

                    </div>
                </div>*@

        </form>


    }
</div>
<script type="text/javascript">
    // external login providers
    var loginMethods = {
        openWindow: function (url, name, iWidth, iHeight) {
            var iTop = (window.screen.availHeight - 30 - iHeight) / 2;
            var iLeft = (window.screen.availWidth - 10 - iWidth) / 2;
            window.open(url, name, 'height=' + iHeight + ',innerHeight=' + iHeight + ',width=' + iWidth + ',innerWidth=' + iWidth + ',top=' + iTop + ',left=' + iLeft + ',toolbar=no,menubar=no,scrollbars=yes,resizeable=no,location=no,status=no');
        },

        authFacebook: function (mode) {
            loginMethods.openWindow('/AuthExternal/Login/Facebook?mode=' + mode, '', 680, 340);
        },

        authTwitter: function (mode) {
            loginMethods.openWindow('/AuthExternal/Login/Twitter?mode=' + mode, '', 680, 520);
        },

        authGoogle: function (mode) {
            loginMethods.openWindow('/AuthExternal/Login/Google?mode=' + mode, '', 680, 520);
        },

        authPayPal: function (mode) {
            loginMethods.openWindow('/AuthExternal/Login/PayPal?mode=' + mode, '', 400, 550);
        },

        handleRedirect: function (url) {
            window.location = url;
        }
    };
</script>
@section Scripts {
    @Scripts.Render("~/Scripts/jqueryval")
}


