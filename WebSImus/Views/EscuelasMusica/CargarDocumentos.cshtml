@model SM.LibreriaComun.DTO.CoordenadasDTO

@{
    ViewBag.Title = "Obtener coordenadas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm("CargarDocumentos", "EscuelasMusica", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
{
    @Html.ValidationSummary(true)

    <div class="panel-body">
    

        <div class="row push-down-20">
            <h3><span class="fa-documentos fa-2x"></span> Datos de Ubicación </h3>
        </div>
        <div class="row push-down-20">
           
            <div class="form-group">
                <label class="col-md-3 control-label">* Direcci&oacute;n</label>
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.Direccion, new { @class = "form-control text", @maxlength = "100" })
                    @Html.ValidationMessageFor(model => model.Direccion, "", new { @class = "text-danger" })
                 
                </div>
         
            </div>

            <div class="form-group">
                <label class="col-md-3 control-label">* Ciudad</label>
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.Ciudad, new { @class = "form-control text", @maxlength = "100" })
                    @Html.ValidationMessageFor(model => model.Ciudad, "", new { @class = "text-danger" })

                </div>

            </div>
        
            <div class="form-group">
                <label class="col-md-3 control-label"> Latitud</label>
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.Latitud, new { @class = "form-control text", @maxlength = "100" })
                    @Html.ValidationMessageFor(model => model.Latitud, "", new { @class = "text-danger" })

                </div>

            </div>

            <div class="form-group">
                <label class="col-md-3 control-label"> Longitud</label>
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.Longitud, new { @class = "form-control text", @maxlength = "100" })
                    @Html.ValidationMessageFor(model => model.Longitud, "", new { @class = "text-danger" })

                </div>

            </div>
         
        </div>


    </div>
    <div class="panel panel-default">
        <div class="panel-footer">
            <input type="submit" value="Guardar" name="Guardar" class="btn btn-primary pull-right" id="btnGuardar" />

        </div>
    </div>
}