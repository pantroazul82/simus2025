                <div class="col-md-9">
                    @Html.TextAreaFor(model => model.ObservacionesTalleres, new { @class = "form-control text", @rows = "4", @cols = "30" })
                    @Html.ValidationMessageFor(model => model.ObservacionesTalleres, "", new { @class = "text-danger" })
                </div>
            </div>
    </div>
</div>

<div class="panel-footer">
    <input type="submit" value="Siguiente" name="TabFormacion" class="btn btn-primary pull-right" id="btnGuardarFormacion" />
    @Html.ActionLink("Anterior", "Organizacion", "EscuelasMusica", new { Id = Model.EscuelaId }, new { @class = "btn btn-primary pull-right" })
</div>