                </div>
                <div class="col-md-3">
                    @Html.TextBoxFor(model => model.HorasMedio, new { @class = "form-control spinner_default" })
                    @Html.ValidationMessageFor(model => model.HorasMedio, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-3 control-label">Observaciones</label>
                <div class="col-md-9">
                    @Html.TextAreaFor(model => model.ObservacionesNiveles, new { @class = "form-control text", @rows = "4", @cols = "30" })
                    @Html.ValidationMessageFor(model => model.ObservacionesNiveles, "", new { @class = "text-danger" })
                </div>
            </div>

    </div>
    <div class="panel-body">
        <h3><span class="fa-clasificados fa-2x"></span> Educación Informal</h3>

            <div class="form-group">
                <label class="col-md-3 control-label"></label>
