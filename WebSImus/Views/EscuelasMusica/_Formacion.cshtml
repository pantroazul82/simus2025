                    @Html.ValidationMessageFor(model => model.HorasBasico, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <label class="col-md-3 control-label">Medio</label>
                <div class="col-md-3">
                    @Html.TextBoxFor(model => model.PoblacionMedio, new { @class = "form-control spinner_default" })
                    @Html.ValidationMessageFor(model => model.PoblacionMedio, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-3">
                    @Html.TextBoxFor(model => model.DuracionMedio, new { @class = "form-control spinner_default" })
