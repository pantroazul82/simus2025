<div class="modal animated fadeIn" id="modal_agregarGenero" tabindex="-1" role="dialog" aria-labelledby="smallModalHead" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content card">
            <div class="mf-modal-header">
                <h5 class="text-lg">
                    <i class="fas fa-music"></i> Información Géneros Musicales por Práctica Musical
                </h5>
            </div>

            <div class="mf-modal-body">
                <div class="mf-section-title">
                    <i class="fas fa-music"></i> Datos
                </div>

                <div class="mf-grid md:mf-grid-cols-12 mf-gap-x-6 mf-mb-4">
                    <div class="md:mf-col-span-8">
                        <div class="mf-field-group">
                            <label class="mf-label" for="generos">Géneros</label>
                            @Html.Editor("generos", new
                            {
                                htmlAttributes = new
                                {
                                    @class = "w-full px-3 py-2 border rounded"
                                }
                            })
                        </div>
                    </div>

                    <div class="md:mf-col-span-4 flex items-end">
                        <button type="button"
                                id="mySubmitGeneros"
                                class="btn btn-success w-full"
                                data-dismiss="modal">
                            <i class="fas fa-plus"></i> Agregar
                        </button>
                    </div>
                </div>

                <div id="TablaGeneros" class="mf-mt-4">
                    @* @Html.Action("Cargargeneros", new { FormacionPracticaId = Model.AgrupacionId, EliminarId = 0 }) *@
                </div>
            </div>

            <div class="mf-modal-footer">
                <button type="button" class="btn btn-warning" data-dismiss="modal">
                    <i class="fas fa-times"></i> Cerrar
                </button>
            </div>
        </div>
    </div>
</div>
