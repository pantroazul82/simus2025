@model SM.LibreriaComun.DTO.FichaAsesoria.ObservacionNuevoDTO


<div class="card-body">
    <h3 class="mf-section-title"><i class="fas fa-comment-dots mr-2"></i> Observaciones</h3>
    @Html.HiddenFor(m => m.EscuelaId)

    <div class="form-group mb-4">
        <label class="mf-label" for="Observaciones">Observaciones</label>
        <div>
            @Html.DisplayFor(model => model.Observaciones, new { @class = "form-control", @rows = "10", @cols = "60", @readonly = "readonly" })
        </div>
    </div>

    <h3 class="mf-section-title mt-5"><i class="fas fa-lightbulb mr-2"></i> Recomendaciones</h3>

    <div class="form-group">
        <label class="mf-label" for="Recomendaciones">Recomendaciones</label>
        <div>
            @Html.DisplayFor(model => model.Recomendaciones, new { @class = "form-control", @rows = "10", @cols = "60", @readonly = "readonly" })
        </div>
    </div>
</div>

