@model SM.LibreriaComun.DTO.FichaAsesoria.MatrizNuevoDTO

<div class="modal animated fadeIn" id="modal_datosMatriz" tabindex="-1" role="dialog" aria-labelledby="smallModalHead" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content card">
            <div class="mf-modal-header">
                @Html.HiddenFor(model => model.EscuelaId)
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.TipoM)
                @Html.HiddenFor(model => model.ClasificacionId)

                <div class="form-title">
                    <i class="fas fa-music"></i>
                    @Html.DisplayFor(model => model.TipoM)
                </div>
            </div>

            <div class="mf-modal-body">
                <div class="mf-field-group">
                    <label class="mf-label">Clasificación</label>
                    <div class="mf-readonly-input">@Html.DisplayFor(model => model.Clasificacion)</div>
                </div>

                <div class="mf-field-group">
                    <label class="mf-label" for="Fortaleza">Fortalezas</label>
                    @Html.TextBoxFor(model => model.Fortaleza, new { @class = "w-full px-3 py-2 border rounded", maxlength = "511" })
                    @Html.ValidationMessageFor(model => model.Fortaleza, "", new { @class = "mf-validation-error" })
                </div>

                <div class="mf-field-group">
                    <label class="mf-label" for="Dificultades">Dificultades</label>
                    @Html.TextBoxFor(model => model.Dificultades, new { @class = "w-full px-3 py-2 border rounded", maxlength = "511" })
                    @Html.ValidationMessageFor(model => model.Dificultades, "", new { @class = "mf-validation-error" })
                </div>
            </div>

            <div class="mf-modal-footer">
                <button type="button" id="btnGuardarMatriz" class="btn btn-success" data-dismiss="modal" onclick="MatrizAgregar('@Model.Id')">
                    <i class="fas fa-save"></i> Guardar
                </button>
                <button type="button" class="btn btn-warning" data-dismiss="modal">
                    <i class="fas fa-times"></i> Cerrar
                </button>
            </div>
        </div>
    </div>
</div>
