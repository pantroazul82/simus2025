<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title> SIMUS - @ViewBag.Title</title>
    <link rel="icon" href="../img/favicon.ico" type="image/x-icon" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!-- START PAGE CONTAINER -->
    <div class="page-container">

        <!-- START PAGE SIDEBAR -->
        <div class="page-sidebar">
            <!-- START X-NAVIGATION -->
            <ul class="x-navigation">
                <li class="xn-logo">
                    <a href="~/Inicio/Index">SIMUS</a>
                    <a href="#" class="x-navigation-control"></a>
                </li>
                @Html.Action("_Perfil", "Inicio")
                <li class="xn-title">Navegación</li>

                @*@Html.Action("_Menu", "Inicio")*@
            </ul>
            <!-- END X-NAVIGATION -->
        </div>
        <!-- END PAGE SIDEBAR -->
        <!-- PAGE CONTENT -->
        <div class="page-content">

            <!-- START X-NAVIGATION VERTICAL -->
            <ul class="x-navigation x-navigation-horizontal x-navigation-panel">
                <!-- TOGGLE NAVIGATION -->
                <li class="xn-icon-button">
                    <a href="#" class="x-navigation-minimize"><span class="fa fa-dedent"></span></a>
                </li>
                <!-- END TOGGLE NAVIGATION -->
                <!-- SEARCH -->
                <li class="xn-search">
                    <form role="form">
                        <input type="text" name="search" placeholder="Buscar..." />
                    </form>
                </li>
                <!-- END SEARCH -->
                <!-- POWER OFF -->
                @Html.Action("_Salir", "Inicio")
                <!-- END POWER OFF -->
                <!-- MESSAGES -->
                @Html.Action("_Mensajes", "Inicio")
                <!-- END MESSAGES -->
                <!-- TASKS -->
                @Html.Action("_Tareas", "Inicio")
                <!-- END TASKS -->
            </ul>
            <!-- END X-NAVIGATION VERTICAL -->
            <!-- START BREADCRUMB -->
            <ul class="breadcrumb">
                <li><a href="#">Miga</a></li>
                <li><a href="#">de pan</a></li>
            </ul>
            <!-- END BREADCRUMB -->

            <div class="page-title">
                <h2><span class="fa fa-arrow-circle-o-left"></span> @ViewBag.Title</h2>
            </div>

            <!-- PAGE CONTENT WRAPPER -->
            <div class="page-content-wrap">
                <div class="row">
                    <div class="col-md-12">
                        @{ Html.RenderPartial("_Alertas"); }
                        @RenderBody()
                    </div>


                </div>
                <!-- END PAGE CONTENT WRAPPER -->
            </div>
            <!-- END PAGE CONTENT -->
        </div>
        <!-- END PAGE CONTAINER -->
        <!-- MESSAGE BOX-->
        @Html.Action("_MensajeConfirmacion", "Inicio")
        <!-- END MESSAGE BOX-->
        <!-- START SCRIPTS -->
        <!-- START PLUGINS-->
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/jqueryval")
        @RenderSection("scripts", required: false)
        <script src="@Url.Content("~/Scripts/jquery.smartWizard-2.0.min.js")"></script>
        <!-- END PLUGINS -->
        <!-- START TEMPLATE-->
        @*<script src="@Url.Content("~/js/plugins/jquery/jquery.min.js")"></script>*@
        @*<script src="@Url.Content("~/js/plugins/jquery/jquery-ui.min.js")"></script>
            <script src="@Url.Content("~/js/plugins/bootstrap/bootstrap.min.js")"></script>*@
        <script src="@Url.Content("~/js/actions.js")"></script>
        <script src="@Url.Content("~/js/plugins.js")"></script>
        <!-- END TEMPLATE -->
        <!-- END SCRIPTS -->
</body>
</html>
