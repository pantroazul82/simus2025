
@model SM.LibreriaComun.DTO.Circulacion.EventoPeriodicoNuevoDTO
@{
    ViewBag.Title = "Evento Periódico";
    Layout = "~/Views/Shared/_LayoutEstandar.cshtml";
}

@using (Html.BeginForm("CambiarEstado", "EventosPeriodicos", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
{

    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()
     <!-- START BREADCRUMB -->
    <ul class="breadcrumb">
        <li>@Html.ActionLink("Inicio", "Index", "Inicio")</li>
        <li>@Html.ActionLink("Escenarios", "Index", "EventosPeriodicos")</li>
    </ul>
            <!-- END BREADCRUMB -->
     <!-- START DEFAULT WIZARD -->
    <div class="panel panel-colorful" id="panelEditar">
        <div class="panel-body">

            @*<blockquote class="blockquote-success">
                    <p class="text-danger ">Los campos marcados con asterisco (*) son obligatorios</p>
                </blockquote>*@
            @Html.Partial("_DatosEditarEstado", Model)

            <div class="row">
                <div class="col-md-12">
                    @Html.Partial("_AgregarImagen", Model.Imagenes)
                </div>
            </div>
        </div>
    </div>
    <!-- END DEFAULT WIZARD -->

}
@section Scripts {

    @Scripts.Render("~/Scripts/jqueryval")
    <script src="@Url.Content("~/Scripts/plugins/icheck/icheck.js")"></script>
    <script src="@Url.Content("~/Scripts/plugins/fileinput/fileinput.js")"></script>
    <script src="@Url.Content("~/Scripts/plugins/fileinput/fileinput_locale_es.js")"></script>
    <script src="~/Scripts/escuelasvalidate.js"></script>

    <script type="text/javascript">
        $('#Imagenes').fileinput({
            showUpload: false,
            language: 'es',
            overwriteInitial: true,
            maxFileSize: 2048,
            allowedFileExtensions: ['jpg', 'png'],
        });

        $(function () {

            $('#CodDepartamento').change(function () {
                var selectedDep = $(this).val();
                var city = $('#codMunicipio');
                var varmunicipio = $('#codMunicipio');
                if (selectedDep != null && selectedDep != '') {

                    $.getJSON('@Url.Action("ObtenerMunicipio", "Agente")', { departamento: selectedDep }, function (data) {
                        var items = '';
                        items = '<option>Seleccione un municipio </option>';
                        $.each(data, function (i, municipio) {
                            items += "<option value='" + municipio.value + "'>" + municipio.text + "</option>";

                        });
                        city.empty();
                        city.html(items);
                        city.click();


                    });

                }

            })


        });

        $(function () {
            $('#Tipo').change(function () {
                var selected = $(this).val();
                var city = $('#ActorId');

                if (selected != null && selected != '') {

                    $.getJSON('@Url.Action("GetActor", "Convocatoria")', { tipo: selected }, function (data) {
                        var items = '';
                        items = '<option>Seleccione un actor </option>';

                        $.each(data, function (i, municipio) {
                            items += "<option value='" + municipio.value + "'>" + municipio.text + "</option>";

                        });
                        city.empty();
                        city.html(items);
                        city.click();

                    });

                }

            })
        });

        $('#btnDocumentoEscuela').click(function () {

            var fileUpload = $("#Imagenes").get(0);
            var files = fileUpload.files;

            // Create FormData object
            var fileData = new FormData();

            // Looping over all files and add it to FormData object
            for (var i = 0; i < files.length; i++) {
                fileData.append(files[i].name, files[i]);
            }

            // Adding one more key to FormData object
            fileData.append('username', 'Manas');

            var url = '@Url.Action("AgregarImagen", "EventosPeriodicos")';
            var varRegistroId = '@Model.Id';
            $.ajax({
                url: '/EventosPeriodicos/AgregarImagen?id=' + varRegistroId,
                type: 'POST',
                contentType: false, // Not to set any content header
                processData: false, // Not to process data
                data: fileData,
                success: function (data) {
                    if (data) {
                        $(':input', '#myForm')
                          .not(':button, :submit, :reset, :hidden')
                          .val('')
                          .removeAttr('checked')
                          .removeAttr('selected');
                        ActualizarListadoImagenes(varRegistroId, 0);


                    }
                },

            });


        });
    </script>
}


