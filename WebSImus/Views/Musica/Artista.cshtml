@model WebSImus.Models.ArtistaModels
@using MvcCheckBoxList.Model
@{
    ViewBag.Title = "Concierto";
    Layout = "~/Views/Shared/_LayoutCelebra.cshtml";
}


@using (Html.BeginForm("Artista", "Musica", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
{
    <br />
    <br />
    @Html.ValidationSummary(true)


    <div class="container">
        <div class="row">
            <h2>Crear Artista</h2>
            <div class="panel-body" id="panelEditar">
                <hr class="colorgraph">
                <div class="row">
                    <div class="form-group">

                        @Html.HiddenFor(model => model.EventoId)

                        <h3>Datos</h3>
                        <div class="col-md-4">
                            <label class="col-md-12">Nombre * </label>
                              <div class="col-md-12">
                                @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control text", @maxlength = "255" })
                                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-4">
                            <label class="col-md-12">Enlace </label>
                            <div class="col-md-12">
                                @Html.TextBoxFor(model => model.Enlace, new { @class = "form-control text", @maxlength = "200" })
                                @Html.ValidationMessageFor(model => model.Enlace, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-4">
                            <label class="col-md-12">Orden de presentación *</label>
                            <div class="col-md-12">
                                @Html.TextBoxFor(model => model.Orden, new { @class = "form-control spinner_default" })
                                @Html.ValidationMessageFor(model => model.Orden, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <hr style="height: 1px; background: #CCC">
                <div class="row">
                    <div class="form-group">
                        <h3>Contacto</h3>
                        <div class="col-md-4">
                            <label class="col-md-12">Contacto  *</label>
                            <div class="col-md-12">
                                @Html.TextBoxFor(model => model.Contacto, new { @class = "form-control text", @maxlength = "500" })
                                @Html.ValidationMessageFor(model => model.Contacto, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-4">
                            <label class="col-md-12">Teléfono *</label>
                            <div class="col-md-12">
                                @Html.TextBoxFor(model => model.Telefono, new { @class = "form-control text" })
                                @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-4">
                            <label class="col-md-12">Correo electrónico</label>
                            <div class="col-md-12">
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control text" })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <hr style="height: 1px; background: #CCC">
                <div class="row">
                    <div class="form-group">
                        <h3>Miembros</h3>
                        <div class="col-md-4">
                            <label class="col-md-12">Grupo</label>
                            <div class="col-md-6">
                                <label class="check">
                                    <label class="check">@Html.RadioButtonFor(m => m.EsGrupo, 1, new { @class = "iradio_minimal-grey", onClick = "validarNacional()" }) Si</label>
                                </label>
                            </div>
                            <div class="col-md-6">
                                <label class="check">
                                    <label class="check">@Html.RadioButtonFor(m => m.EsGrupo, 2, new { @class = "iradio_minimal-grey", onClick = "validarNacional()" }) No</label>
                                    @Html.ValidationMessageFor(model => model.EsGrupo, "", new { @class = "text-danger" })
                                </label>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <label class="col-md-12">Cantidad de miembros *</label>
                            <div class="col-md-12">
                                @Html.TextBoxFor(model => model.CantidadMiembros, new { @class = "form-control text", @maxlength = "5" })
                                @Html.ValidationMessageFor(model => model.CantidadMiembros, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-4">

                        </div>
                    </div>
                </div>
                <hr style="height: 1px; background: #CCC">
                <div class="row">
                    <div class="form-group">
                        <h3>Nivel</h3>
                        <div class="col-md-4">
                            <label class="col-md-12">Categoría musical *</label>
                            <div class="col-md-12">
                                @Html.DropDownListFor(model => model.CategoriaId, (SelectList)ViewBag.listCategoria, "Seleccione una categoría", new { @class = "styled-select" })
                                @Html.ValidationMessageFor(model => model.CategoriaId, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-4">
                            <label class="col-md-12">Proceso de formación *</label>
                            <div class="col-md-12">
                                @Html.DropDownListFor(model => model.ProcesoId, (SelectList)ViewBag.listProceso, "Seleccione un proceso", new { @class = "styled-select" })
                                @Html.ValidationMessageFor(model => model.ProcesoId, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-4">
                          
                        </div>
                    </div>
                </div>
                <hr style="height: 1px; background: #CCC">
                <div class="row">
                    <div class="form-group">
                        <h3>Perfil</h3>
                        <div class="col-md-4">
                            <label class="col-md-12">Reseña * </label>
                            <div class="col-md-12">
                                @Html.TextAreaFor(model => model.Resena, new { @class = "form-control text", @rows = "10", @cols = "50" })
                                @Html.ValidationMessageFor(model => model.Resena, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-4">
                            <label class="col-md-12">Subir foto </label>
                            <div class="col-md-12">
                                <h6>Tipos de archivo permitidos: .jpg y .png de tamaño máximo 2.5 Mb</h6>
                                <h6>Recomendamos subir fotografía relacionada con el artista</h6>
                                 <input onclick="resizePanel()" id="imagenPerfil" name="imagenPerfil" type="file">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="" id="user_image">
                                <img src="@Url.Content(ViewBag.ImageData)" class="img-responsive" />
                            </div>
                        </div>
                    </div>
                </div>

                <hr style="height: 1px; background: #CCC">
                <div class="row">
                    <div class="form-group">
                        <div class="col-md-4">
                            <div class="col-md-12">
                                <input type="submit" value="Guardar" name="Guardar" class="btn btn-primary pull-right" id="btnGuardar" />
                                <div class="btn btn-default pull-left">
                                    <i class="fa fa-arrow-circle-o-left"></i>@Html.ActionLink("Regresar al concierto", "Editar", "Musica", new { Id = Model.EventoId }, null)
                                </div>
                            </div>


                        </div>
                    </div>
                </div>

        
            </div>
        </div>
    </div>

    //desde aqui


}
@section Scripts {

    @Scripts.Render("~/Scripts/jqueryval")
    <script src="@Url.Content("~/Scripts/plugins/icheck/icheck.js")"></script>
    <script src="@Url.Content("~/Scripts/plugins/fileinput/fileinput.js")"></script>
    <script src="@Url.Content("~/Scripts/plugins/fileinput/fileinput_locale_es.js")"></script>

    <script type="text/javascript">
        $('#HoraEvento').timepicker({
            template: false,
            showInputs: false,
            minuteStep: 5
        });

        var pagecontentwrapHeight = $(".page-content-wrap").height();
        $('#panelEditar').css("height", pagecontentwrapHeight);

        $('#imagenPerfil').fileinput({
            showUpload: false,
            language: 'es',
            overwriteInitial: true,
            maxFileSize: 2560,
            allowedFileExtensions: ['jpg', 'png'],
        });


        $(window).on('resize', function () {
            var new_pagecontentwrapHeight = pagecontentwrapHeight + 200;
            $('#panelEditar').css("height", new_panelbodyHeight);
            $('#panelEditar').css("min-height", pagecontentwrapHeight + 350);
        });

        function resizePanel() {
            var new_pagecontentwrapHeight = pagecontentwrapHeight + 200;
            $('#panelEditar').css("height", new_pagecontentwrapHeight);
        };

        var Informacion = ["#Orden", "#CantidadMiembros"];
        var InformacionLength = Informacion.length;
        for (var i = 0; i < InformacionLength; i++) {
            var spinner = $(Informacion[i]).spinner({
                step: 1,
                min: 0,
                max: 999,
                icons: { down: "ui-icon-custom-down", up: "ui-icon-custom-up" },
                stop: function (event, ui) {

                }
            });
        }


        /* Validar escribir solo números */
        function ValidaSoloNumeros() {
            console.log("ValidaSoloNumeros");
            if ((event.keyCode < 48) || (event.keyCode > 57))
                event.returnValue = false;
        }


        for (var i = 0; i < InformacionLength; i++) {
            $(Informacion[i]).keypress(function () {
                ValidaSoloNumeros();
            });
        }

    </script>
}


