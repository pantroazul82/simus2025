@using PagedList;
@using PagedList.Mvc;
@model IPagedList<WebSImus.Models.EventoDataModels>
<div id="formacion1">
  
    <div class="row" >
        <div class="col-md-6 col-sm-12 col-xs-12 texto_noticias_titulo" style=" border-bottom:1px dashed #444;"> @ViewBag.Registros</div>
     
    </div>
    <div class="col-md-12 registros">
        <span class="">Cantidad de Registros :</span> <span class="">@ViewBag.CantidadRegistros</span>

    </div>

    <div class="space1">  </div>
    <div class="row">
        <div class="col-md-12">
            @if (Model != null)
            {

                if (Model.Count > 0)
                {
                    if (Model.Count <= 4)
                    {

                        foreach (var item in Model)
                        {

                            <div class="col-md-3 col-sm-6 col-xs-6 this-animate" data-animate="fadeInLeft bounce">

                                <div class="row">
                                    @if (!String.IsNullOrEmpty(item.rutaFoto))
                                    {
                                        <img src=@item.rutaFoto class="img-responsive img-artistas">
                                    }
                                    else
                                    {
                                        <img class="img-responsive img-artistas" src="@WebSImus.Models.Usuarios.CreateImage(@item.Imagen, 440, 300) " />
                                    }

                                    <div class="col-md-4 artistas_description">
                                        <a href="" class="artista_tooltip fa-lg fa-musical"  data-id="@item.EventoId" onclick="javascript: ActualizarListado('@item.EventoId'); return false;"><span class="txt_link_morado">Artistas</span></a>
                                       
                                    </div>

                                    <div class="titulo_negro_ficha row">

                                        <div class="col-md-12 texto_foto_grupo">@item.NombreDepartamento @item.NombreMunicipio </div>

                                    </div>
                                    <div class="row titulo_naranja_ficha">

                                        <span class="lugar">@item.EntidadOrganizadora</span>

                                    </div>

                                    <div class="row">

                                        <div class="col-md-12 titulo_amarillo_ficha">
                                            <div class="col-md-4 texto_foto_grupo1">@item.FechaEvento.ToString("dd/MM/yyyy hh:mm tt")</div>
                                            <div class="col-md-8 texto_foto_grupo2">@item.LugarEvento </div>

                                        </div>
                                    </div>
                                </div>


                            </div>

                        }

                    }
                    if (Model.Count > 4)
                    {
                        var filas = 2;
                        if (Model.Count > 8)
                        {
                            filas = 3;
                        }
                        var total = Model.Count;
                        var inicio = 0;
                        for (int j = 1; j <= filas; j++)
                        {
                            <div class="row">
                                <div class="col-md-12">
                                    @if (j == 1)
                                    {
                                        total = 3;
                                        inicio = 0;
                                    }
                                    else
                                    {
                                        inicio = inicio + 4;
                                        total = total + 4;
                                        if (total > Model.Count - 1)
                                        {
                                            total = Model.Count - 1;
                                        }
                                    }
                                    @for (int i = inicio; i <= total; i++)
                                    {
                                        <div class="col-md-3 col-sm-6 col-xs-6 this-animate" data-animate="fadeInLeft bounce">

                                            <div class="row">
                                                @if (!String.IsNullOrEmpty(Model[i].rutaFoto))
                                                {
                                                    <img src=@Model[i].rutaFoto class="img-responsive img-artistas">
                                                }
                                                else
                                                {
                                                  <img class="img-responsive img-artistas" src="@WebSImus.Models.Usuarios.CreateImage(@Model[i].Imagen, 440, 300) " />
                                                }


                                                <div class="col-md-4 artistas_description">
                                                    <a href="" class="artista_tooltip fa-lg fa-musical" data-id="@Model[i].EventoId" onclick="javascript: ActualizarListado('@Model[i].EventoId'); return false;"><span class="txt_link_morado">Artistas</span></a>
                                                </div>

                                                <div class="titulo_negro_ficha row">

                                                    <div class="col-md-12 texto_foto_grupo">@Model[i].NombreDepartamento @Model[i].NombreMunicipio </div>

                                                </div>
                                                <div class="row titulo_naranja_ficha">

                                                    <span class="lugar">@Model[i].EntidadOrganizadora</span>

                                                </div>

                                                <div class="row">

                                                    <div class="col-md-12 titulo_amarillo_ficha">
                                                        <div class="col-md-4 texto_foto_grupo1">@Model[i].FechaEvento.ToString("dd/MM/yyyy hh:mm tt")</div>
                                                        <div class="col-md-8 texto_foto_grupo2">@Model[i].LugarEvento </div>

                                                    </div>
                                                </div>
                                            </div>


                                        </div>

                                    }


                                </div>
                            </div>
                            <div class="space1">  </div>
                        }
                    }
                }

                <div class="space1">  </div>

            }

        </div>
    </div>
    <div class="space1">  </div>
    <div class="row">
        <div class="col-md-12">

            <div class="col-md-12 col-sm-9 col-xs-9">
                <div id="myPager" class="pagination">
                    @Html.PagedListPager(
        Model,
        page => Url.Action(
                           "Programacion",
            new
            {
                CodDepto = ViewBag.CodDepto,
                codMunicipio = ViewBag.codMunicipio,
                periodo = ViewBag.periodo,
                page = page
            }
        ),
        new PagedListRenderOptions
        {
            LinkToFirstPageFormat = "<<",
            LinkToPreviousPageFormat = "<",
            LinkToNextPageFormat = ">",
            LinkToLastPageFormat = ">>",
        }
    )
                </div>
            </div>

        </div>
    </div>
</div>
