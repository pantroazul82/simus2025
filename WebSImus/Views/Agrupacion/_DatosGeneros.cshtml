@model WebSImus.Models.AgrupacionNuevoModels

<div class="panel panel-default">
    <div class="panel-heading">
        <h2><span class="fa-representante fa-2x"></span> Información Géneros Musicales</h2>
    </div>
    <div class="panel-body">
        <p class="text-info"><i class="fa-ayuda"></i> Por favor registrar cada género por separado.</p>
        <div class="row push-down-20">
            <h3><span class="fa-representante fa-2x"></span> Datos</h3>
        </div>
        <div class="row push-down-20">
            <div class="col-md-6">

                <div class="form-group">
                    <label class="col-md-4 control-label">Géneros </label>
                    <div class="col-md-8">
                        @Html.Editor("generos", new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
            </div>
            <div class="col-md-6">

                <div class="form-group">

                    <div class="col-md-6">
                        <button type="button" id="mySubmitGeneros" class="btn btn-success glyphicon glyphicon-plus-sign" data-dismiss="modal"> Agregar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="TablaGeneros" class="panel-body">
        @Html.Action("Cargargeneros", new { agrupacionId = Model.AgrupacionId, EliminarId = 0 })
    </div>
</div>
<script type="text/javascript">

    function EliminarGeneros(varid) {
        var varAgenteId = '@Model.AgrupacionId';
        ActualizarListadoGenero(varAgenteId, varid)
    }


</script>
