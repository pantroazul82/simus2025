@model WebSImus.Models.GrupoModels
<div class="modal animated fadeIn" id="modal_agregarGrupo" tabindex="-1" role="dialog" aria-labelledby="smallModalHead" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="smallModalHead">Agregar Grupo</h4>
            </div>
            <div class="row">

                <div class="form-group">
                    <label class="col-md-4 control-label">Nombre</label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.NombreGrupo, new { @class = "form-control text", @maxlength = "500" })
                        @Html.ValidationMessageFor(model => model.NombreGrupo, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label"> Contacto</label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.Contacto, new { @class = "form-control text", @maxlength = "200" })
                        @Html.ValidationMessageFor(model => model.Contacto, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4 control-label"> Teléfono</label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.Telefono, new { @class = "form-control text", @maxlength = "20" })
                        @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label"> Enlace</label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.Enlace, new { @class = "form-control text", @maxlength = "500", @placeholder = "http://www.mincultura.gov.co" })      
                        @Html.ValidationMessageFor(model => model.Enlace, "", new { @class = "text-danger" })
                     </div>
                  
                </div>

                <div class="form-group">
                    <label class="col-md-4 control-label"> Cantidad miembros</label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.CantidadMiembros, new { @class = "form-control text", @maxlength = "5" })
                        @Html.ValidationMessageFor(model => model.CantidadMiembros, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4 control-label"> Orden de presentación</label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.Orden, new { @class = "form-control text", @maxlength = "5" })
                        @Html.ValidationMessageFor(model => model.Orden, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label"> Reseña</label>
                    <div class="col-md-8">
                        @Html.TextAreaFor(model => model.Resena, new { @class = "form-control text", @rows = "5", @cols = "50" })
                        @Html.ValidationMessageFor(model => model.Resena, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>


            <div class="modal-footer">
                <button type="button" id="mySubmit" class="btn btn-danger" data-dismiss="modal">Guardar</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>

            </div>
        </div>
    </div>

</div>

