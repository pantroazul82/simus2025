
@model SM.LibreriaComun.DTO.EntidadesOperadoras.ContenidoDTO

<div class="modal animated fadeIn" id="modal_datosContenido" tabindex="-1" role="dialog" aria-labelledby="smallModalHead" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content modal-md">
            <div class="modal-header">
                <div class=" fondo_caja_item row">
                    @Html.HiddenFor(model => model.ActividadId)
                    @Html.HiddenFor(model => model.Id)


                    <div class="col-md-12 titulo_alumnos">
                        <span><i class="fa fa-musical"></i>Contenido</span>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-12">


                        <div class="form-group">
                            <label class="col-md-4 control-label">Nombre</label>
                            <div class="col-md-8">

                                @Html.DropDownListFor(model => model.NombreContenido, (SelectList)ViewBag.listNombre, "Seleccione", new { @class = "styled-select" })
                                @Html.ValidationMessageFor(model => model.NombreContenido, "", new { @class = "text-danger" })
                            </div>
                        </div>
       
                      
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="col-md-4 control-label">Descripción</label>
                            <div class="col-md-8">
                                @Html.TextAreaFor(model => model.DescripcionContenido, new { @class = "form-control text", @rows = "5", @cols = "50" })
                                @Html.ValidationMessageFor(model => model.DescripcionContenido, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                </div>

            </div>
                    <div class="modal-footer">

                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-12 col-sm-6 col-xs-6">
                                    <button type="button" id="btnGuardarMatriz" class="btn btn-success" data-dismiss="modal" onclick="ContenidoAgregar('@Model.Id')">Guardar</button>
                                    <button type="button" class="btn btn-warning" data-dismiss="modal">Cerrar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
</div>

