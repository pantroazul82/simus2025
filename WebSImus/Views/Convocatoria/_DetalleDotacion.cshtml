@model WebSImus.Models.DotacionModel

<div class="panel panel-default">

    <div class="panel-body">
        @Html.HiddenFor(model => model.ConvocatoriaId)
        @Html.HiddenFor(model => model.EntidadId)
        @Html.HiddenFor(model => model.EscuelaId)

        <div class="row push-down-20">
            <h3><span class="fa fa-book"></span> Datos Representante Legal</h3>
        </div>
        <div class="row push-down-20">
            <div class="col-md-6">

                <div class="form-group">
                    <label class="col-md-3 control-label"> Nombres</label>
                    <div class="col-md-9">
                        @Html.DisplayFor(model => model.Nombre, new { @class = "form-control text", @maxlength = "200" })

                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label">Apellidos</label>
                    <div class="col-md-9">
                        @Html.DisplayFor(model => model.Apellido, new { @class = "form-control text", @maxlength = "200" })

                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label">Identificación</label>
                    <div class="col-md-9">
                        @Html.DisplayFor(model => model.Identificacion, new { @class = "form-control text", @maxlength = "15" })

                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label"> Cargo</label>
                    <div class="col-md-9">
                        @Html.DisplayFor(model => model.Cargo, new { @class = "form-control text", @maxlength = "200" })

                    </div>
                </div>

            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="col-md-3 control-label">Email</label>
                    <div class="col-md-9">
                        @Html.DisplayFor(model => model.Email, new { @class = "form-control text", @maxlength = "200" })

                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label">Teléfono</label>
                    <div class="col-md-9">
                        @Html.DisplayFor(model => model.Telefono, new { @class = "form-control text", @maxlength = "50" })

                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label">Celular</label>
                    <div class="col-md-9">
                        @Html.DisplayFor(model => model.Celular, new { @class = "form-control text", @maxlength = "100" })
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>
