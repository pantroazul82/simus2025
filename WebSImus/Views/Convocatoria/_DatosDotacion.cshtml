@model WebSImus.Models.DotacionModel

<div class="panel panel-default">

    <div class="panel-body">
        @Html.HiddenFor(model => model.ConvocatoriaId)
        @Html.HiddenFor(model => model.EntidadId)
        @Html.HiddenFor(model => model.EscuelaId)

        <div class="row push-down-20">
            <h3><span class="fa fa-book"></span> Datos Representante Legal</h3>
        </div>
        <div class="row push-down-20">
            <div class="col-md-6">

                <div class="form-group">
                    <label class="col-md-3 control-label">* Nombres</label>
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control text", @maxlength = "200" })
                        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label">* Apellidos</label>
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.Apellido, new { @class = "form-control text", @maxlength = "200" })
                        @Html.ValidationMessageFor(model => model.Apellido, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label">* Identificación</label>
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.Identificacion, new { @class = "form-control text", @maxlength = "15" })
                        @Html.ValidationMessageFor(model => model.Identificacion, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label">* Cargo</label>
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.Cargo, new { @class = "form-control text", @maxlength = "200" })
                        @Html.ValidationMessageFor(model => model.Cargo, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="col-md-3 control-label">* Correo Electrónico</label>
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control text", @maxlength = "200" })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label">* Teléfono</label>
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.Telefono, new { @class = "form-control text", @maxlength = "50" })
                        @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label">Celular</label>
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.Celular, new { @class = "form-control text", @maxlength = "100" })
                        @Html.ValidationMessageFor(model => model.Celular, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

       
       
    </div>
    <div class="panel-footer">
        <input type="submit" value="Guardar" name="Guardar" class="btn btn-primary pull-right" id="btnGuardar" />

    </div>
</div>