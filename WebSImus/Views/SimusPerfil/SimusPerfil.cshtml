@model WebSImus.Models.Usuarios
@{
    ViewBag.Title = "Perfil";
    Layout = "~/Views/Shared/_LayoutEstandar.cshtml";
}

@using (Html.BeginForm("ActualizarCuenta", "SimusPerfil", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
{
    @Html.ValidationSummary(true)
    <div class="modern-profile-form">
        <div class="form-header">
            <h2 class="form-title">
                <i class="fas fa-user-circle"></i> Perfil de Usuario
            </h2>
        </div>

        <div class="form-body">
            @Html.HiddenFor(model => model.contrasena)
            @Html.HiddenFor(model => model.confcontrasena)
            @Html.HiddenFor(model => model.Id)

            <!-- Sección Información Básica -->
            <div class="form-section">
                <h3 class="section-title">
                    <i class="fas fa-id-card"></i> Información Personal
                </h3>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.usuario, "Correo electrónico", new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.usuario, new
                        {
                            @class = "form-control modern-input",
                            @readonly = true,
                            type = "email",
                            maxlength = "50"
                        })
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.tipoDocumento, "Tipo de documento", new { @class = "form-label" })
                        @Html.DropDownListFor(model => model.tipoDocumento, (SelectList)ViewBag.listTipoDocumento, "Seleccione un valor", new { @class = "form-control modern-select" })
                        @Html.ValidationMessageFor(model => model.tipoDocumento, "", new { @class = "validation-error" })
                    </div>

                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.numeroDocumento, "Número de documento", new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.numeroDocumento, new
                        {
                            @class = "form-control modern-input",
                            maxlength = "50"
                        })
                        @Html.ValidationMessageFor(model => model.numeroDocumento, "", new { @class = "validation-error" })
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.primerNombre, "Primer nombre", new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.primerNombre, new
                        {
                            @class = "form-control modern-input",
                            maxlength = "50"
                        })
                        @Html.ValidationMessageFor(model => model.primerNombre, "", new { @class = "validation-error" })
                    </div>

                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.segundoNombre, "Segundo nombre", new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.segundoNombre, new
                        {
                            @class = "form-control modern-input",
                            maxlength = "50"
                        })
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.primerApellido, "Primer apellido", new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.primerApellido, new
                        {
                            @class = "form-control modern-input",
                            maxlength = "50"
                        })
                        @Html.ValidationMessageFor(model => model.primerApellido, "", new { @class = "validation-error" })
                    </div>

                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.segundoApellido, "Segundo apellido", new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.segundoApellido, new
                        {
                            @class = "form-control modern-input",
                            maxlength = "50"
                        })
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.fechaNacimiento, "Fecha de nacimiento", new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.fechaNacimiento, new
                        {
                            @class = "form-control modern-input datepicker"
                        })
                        @Html.ValidationMessageFor(model => model.fechaNacimiento, "", new { @class = "validation-error" })
                    </div>

                    <div class="form-group col-md-6">
                        <label class="form-label">Sexo</label>
                        <div class="radio-group">
                            <label class="radio-option">
                                @Html.RadioButtonFor(m => m.sexo, "Femenino", new { @class = "radio-input" })
                                <span class="radio-label"><i class="fas fa-venus"></i> Femenino</span>
                            </label>
                            <label class="radio-option">
                                @Html.RadioButtonFor(m => m.sexo, "Masculino", new { @class = "radio-input" })
                                <span class="radio-label"><i class="fas fa-mars"></i> Masculino</span>
                            </label>
                        </div>
                        @Html.ValidationMessageFor(model => model.sexo, "", new { @class = "validation-error" })
                    </div>
                </div>
            </div>

            <!-- Sección Ubicación -->
            <div class="form-section">
                <h3 class="section-title">
                    <i class="fas fa-map-marker-alt"></i> Ubicación
                </h3>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.pais, "País de origen", new { @class = "form-label" })
                        @Html.DropDownListFor(model => model.pais, (SelectList)ViewBag.listPaises, "Seleccione un valor", new
                        {
                            @class = "form-control modern-select",
                            id = "paisSelect"
                        })
                        @Html.ValidationMessageFor(model => model.pais, "", new { @class = "validation-error" })
                    </div>

                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.departamento, "Departamento de origen", new { @class = "form-label" })
                        @Html.DropDownListFor(model => model.departamento, (SelectList)ViewBag.listDpto, "", new
                        {
                            @class = "form-control modern-select",
                            id = "departamentoSelect"
                        })
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.municipio, "Municipio de origen", new { @class = "form-label" })
                        @Html.DropDownListFor(model => model.municipio, (SelectList)ViewBag.listMun, "", new
                        {
                            @class = "form-control modern-select",
                            id = "municipioSelect"
                        })
                    </div>
                </div>
            </div>
        </div>

        <div class="form-footer">
            <a href="@Url.Action("Index", "Inicio")" class="btn btn-secondary-cancel">
                <i class="fas fa-arrow-left"></i> Regresar
            </a>
            <button type="submit" class="btn btn-primary-save">
                <i class="fas fa-save"></i> Guardar Cambios
            </button>
        </div>
    </div>
}

<!-- Estilos CSS -->
<style>
    .modern-profile-form {
        max-width: 1000px;
        margin: 0 auto;
        padding: 30px;
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    }

    .form-header {
        margin-bottom: 30px;
        text-align: center;
        color: #4b3c8c;
    }

    .form-title {
        color: #4b3c8c;
        font-weight: 600;
        margin-bottom: 5px;
        font-size: 28px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

    .form-section {
        margin-bottom: 40px;
        padding-bottom: 30px;
        border-bottom: 1px solid #ecf0f1;
    }

    .section-title {
        color: #4b3c8c;
        font-size: 20px;
        margin-bottom: 25px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .form-row {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        margin-bottom: 20px;
    }

    .form-group {
        flex: 1;
        min-width: 200px;
    }

    .form-label {
        display: block;
        margin-bottom: 8px;
        font-weight: 500;
        color: #34495e;
    }

    .modern-input, .form-control {
        width: 100%;
        padding: 12px 15px;
        border: 1px solid #e1e5eb;
        border-radius: 8px;
        transition: all 0.3s;
        background-color: #f8f9fa;
        height: 46px;
        box-sizing: border-box;
    }

        .modern-input:focus, .form-control:focus {
            border-color: #4b3c8c;
            box-shadow: 0 0 0 3px rgba(75, 60, 140, 0.1);
            background-color: #fff;
            outline: none;
        }

    .modern-select {
        appearance: none;
        -webkit-appearance: none;
        -moz-appearance: none;
        background-image: none;
        padding-right: 35px;
        cursor: pointer;
        position: relative;
    }

        .modern-select::after {
            content: "\f078";
            font-family: 'Font Awesome 6 Free';
            font-weight: 900;
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            pointer-events: none;
            color: #4b3c8c;
            font-size: 14px;
        }

    .radio-group {
        display: flex;
        gap: 20px;
        padding-top: 10px;
    }

    .radio-option {
        display: flex;
        align-items: center;
        gap: 8px;
        cursor: pointer;
    }

    .radio-input {
        margin: 0;
    }

    .radio-label {
        color: #34495e;
    }

    .validation-error {
        display: block;
        margin-top: 5px;
        font-size: 13px;
        color: #e74c3c;
    }

    .form-footer {
        display: flex;
        justify-content: space-between;
        gap: 15px;
        margin-top: 30px;
    }

    .btn {
        padding: 12px 24px;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        border: none;
        cursor: pointer;
        font-size: 16px;
        text-decoration: none;
    }

    .btn-secondary-cancel {
        background-color: #ecf0f1;
        color: #34495e;
        border: 1px solid #d5dbdb;
    }

        .btn-secondary-cancel:hover {
            background-color: #e0e0e0;
        }

    .btn-primary-save {
        background-color: #4b3c8c;
        color: white;
    }

        .btn-primary-save:hover {
            background-color: #281e52;
        }
</style>

@section Scripts {
    @Scripts.Render("~/Scripts/jqueryval")

    <script>
        $(document).ready(function() {
            // Inicializar datepicker
            $('.datepicker').datepicker({
                format: 'yyyy-mm-dd',
                autoclose: true,
                endDate: '0d'
            });

            // Carga dinámica de departamentos según país
            $('#paisSelect').change(function() {
                var paisId = $(this).val();
                if (paisId) {
                    $.get('@Url.Action("obtenerDepartamento", "SimusPerfil")', {
                        codpais: paisId
                    }, function(data) {
                        var deptoSelect = $('#departamentoSelect');
                        deptoSelect.empty();
                        deptoSelect.append('<option value="">Seleccione un valor</option>');

                        $.each(data, function(i, dpto) {
                            deptoSelect.append($('<option>', {
                                value: dpto.value,
                                text: dpto.text
                            }));
                        });

                        // Limpiar municipios
                        $('#municipioSelect').empty();
                    });
                } else {
                    $('#departamentoSelect').empty();
                    $('#municipioSelect').empty();
                }
            });

            // Carga dinámica de municipios según departamento
            $('#departamentoSelect').change(function() {
                var deptoId = $(this).val();
                if (deptoId) {
                    $.get('@Url.Action("obtenerMunicipio", "SimusPerfil")', {
                        coddpto: deptoId
                    }, function(data) {
                        var muniSelect = $('#municipioSelect');
                        muniSelect.empty();

                        $.each(data, function(i, muni) {
                            muniSelect.append($('<option>', {
                                value: muni.value,
                                text: muni.text
                            }));
                        });
                    });
                } else {
                    $('#municipioSelect').empty();
                }
            });

            // Validación antes de enviar el formulario
            $('form').submit(function(e) {
                if (!$(this).valid()) {
                    e.preventDefault();
                    $('.validation-error').parent().closest('.form-group').addClass('has-error');
                    $('html, body').animate({
                        scrollTop: $('.has-error').first().offset().top - 100
                    }, 500);
                }
            });
        });
    </script>
}